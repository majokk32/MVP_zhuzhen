/**app.wxss**/
/* 全局样式 */

/* 引入字体图标（如需要） */
@import './assets/styles/iconfont.wxss';

/* CSS变量定义 */
page {
  --primary-color: #1989fa;
  --success-color: #07c160;
  --warning-color: #ff976a;
  --danger-color: #ee0a24;
  --info-color: #323233;
  
  --text-color: #323233;
  --text-color-secondary: #969799;
  --text-color-tertiary: #c8c9cc;
  
  --border-color: #ebedf0;
  --background-color: #f7f8fa;
  --background-color-light: #fafafa;
  
  --font-size-xs: 20rpx;
  --font-size-sm: 24rpx;
  --font-size-md: 28rpx;
  --font-size-lg: 32rpx;
  --font-size-xl: 36rpx;
  
  background-color: var(--background-color);
  font-size: var(--font-size-md);
  color: var(--text-color);
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica,
    Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB',
    'Microsoft Yahei', sans-serif;
}

/* 容器 */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

/* 安全区域 */
.safe-area-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

/* Flex布局 */
.flex {
  display: flex;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-1 {
  flex: 1;
}

/* 文本样式 */
.text-primary {
  color: var(--primary-color);
}

.text-success {
  color: var(--success-color);
}

.text-warning {
  color: var(--warning-color);
}

.text-danger {
  color: var(--danger-color);
}

.text-secondary {
  color: var(--text-color-secondary);
}

.text-center {
  text-align: center;
}

.text-bold {
  font-weight: bold;
}

/* 文本省略 */
.ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.ellipsis-2 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 间距 */
.mt-10 { margin-top: 10rpx; }
.mt-20 { margin-top: 20rpx; }
.mt-30 { margin-top: 30rpx; }
.mb-10 { margin-bottom: 10rpx; }
.mb-20 { margin-bottom: 20rpx; }
.mb-30 { margin-bottom: 30rpx; }
.ml-10 { margin-left: 10rpx; }
.ml-20 { margin-left: 20rpx; }
.mr-10 { margin-right: 10rpx; }
.mr-20 { margin-right: 20rpx; }

.p-20 { padding: 20rpx; }
.p-30 { padding: 30rpx; }
.pt-20 { padding-top: 20rpx; }
.pb-20 { padding-bottom: 20rpx; }
.pl-20 { padding-left: 20rpx; }
.pr-20 { padding-right: 20rpx; }

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(100, 101, 102, 0.08);
}

/* 按钮样式 */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0 30rpx;
  height: 88rpx;
  font-size: 32rpx;
  border-radius: 44rpx;
  background-color: var(--primary-color);
  color: #fff;
  border: none;
  box-sizing: border-box;
}

.btn-large {
  width: 100%;
  height: 96rpx;
  font-size: 36rpx;
  border-radius: 48rpx;
}

.btn-small {
  padding: 0 20rpx;
  height: 60rpx;
  font-size: 24rpx;
  border-radius: 30rpx;
}

.btn-plain {
  background-color: #fff;
  color: var(--primary-color);
  border: 2rpx solid var(--primary-color);
}

.btn-disabled {
  opacity: 0.5;
  pointer-events: none;
}

/* 列表项 */
.list-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: #fff;
  position: relative;
}

.list-item::after {
  content: '';
  position: absolute;
  left: 30rpx;
  right: 0;
  bottom: 0;
  height: 1rpx;
  background-color: var(--border-color);
  transform: scaleY(0.5);
}

.list-item:last-child::after {
  display: none;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 30rpx;
  color: var(--text-color-secondary);
  font-size: var(--font-size-sm);
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  color: var(--text-color-secondary);
  font-size: var(--font-size-md);
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  font-size: var(--font-size-xs);
  border-radius: 4rpx;
  background-color: var(--background-color);
  color: var(--text-color-secondary);
}

.tag-primary {
  background-color: rgba(25, 137, 250, 0.1);
  color: var(--primary-color);
}

.tag-success {
  background-color: rgba(7, 193, 96, 0.1);
  color: var(--success-color);
}

.tag-warning {
  background-color: rgba(255, 151, 106, 0.1);
  color: var(--warning-color);
}

.tag-danger {
  background-color: rgba(238, 10, 36, 0.1);
  color: var(--danger-color);
}

/* 分割线 */
.divider {
  height: 20rpx;
  background-color: var(--background-color);
}