  gap: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.comment-title .icon {
  font-size: 32rpx;
}

.comment-content {
  font-size: 30rpx;
  color: #333;
