/* 任务详情页样式 - 重新设计版本 */

/* 容器 */
.container {
  min-height: 100vh;
  background: #f3f4f6;
  padding-bottom: env(safe-area-inset-bottom);
}

/* 任务信息卡片 */
.task-info-card {
  background: white;
  margin: 32rpx 24rpx;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 12rpx 48rpx rgba(102, 126, 234, 0.15);
}

.task-header {
  margin-bottom: 32rpx;
}

.task-title {
  font-size: 44rpx;
  font-weight: 700;
  color: #1a1a1a;
  line-height: 1.3;
  margin-bottom: 16rpx;
}

.task-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex-wrap: wrap;
}

.task-type {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  background: #f0f8ff;
  color: #1989fa;
}

.task-type.live {
  background: #ffe4e1;
  color: #ff6b6b;
}

.task-type.extra {
  background: #fff3cd;
  color: #ffc107;
}

.task-type.normal {
  background: #e3f2fd;
  color: #1976d2;
}

.task-date {
  font-size: 26rpx;
  color: #888;
}

/* 任务要求区域 */
.task-requirements {
  background: #f8fafc;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.section-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.section-title .icon {
  font-size: 36rpx;
}

.requirements-content {
  font-size: 30rpx;
  color: #555;
  line-height: 1.6;
}

/* 截止时间 */
.deadline-info {
  display: flex;
  align-items: center;
  background: #fff5f0;
  border: 2rpx solid #ffd6cc;
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  margin-bottom: 24rpx;
}

.deadline-label {
  font-size: 26rpx;
  color: #666;
  margin-right: 12rpx;
}

.deadline-time {
  font-size: 26rpx;
  color: #ff6b35;
  font-weight: 600;
}

.deadline-time.overdue {
  color: #ff4757;
}

.remaining-time {
  font-size: 24rpx;
  color: #999;
  margin-left: 8rpx;
}

/* 提示信息 */
.submit-limit-tip,
.review-reset-tip {
  display: flex;
  align-items: center;
  gap: 12rpx;
  background: #e8f4fd;
  border: 2rpx solid #bde0ff;
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  margin-bottom: 16rpx;
  font-size: 26rpx;
  color: #1989fa;
}

/* 卡片区域 */
.section-card {
  background: white;
  margin: 24rpx;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

/* 上传区域 */
.upload-area {
  margin-top: 24rpx;
}

.upload-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.upload-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.upload-item image {
  width: 100%;
  height: 100%;
}

.delete-btn {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 48rpx;
  height: 48rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 32rpx;
  font-weight: 300;
}

.upload-btn {
  width: 200rpx;
  height: 200rpx;
  border: 3rpx dashed #ddd;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  background: #fafafa;
  transition: all 0.3s ease;
}

.upload-btn:active {
  background: #f0f0f0;
  border-color: #1989fa;
}

.upload-icon {
  font-size: 48rpx;
  color: #999;
}

.upload-text {
  font-size: 26rpx;
  color: #666;
}

.upload-tip {
  font-size: 22rpx;
  color: #999;
}

.upload-tips {
  padding: 16rpx 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border-left: 6rpx solid #1989fa;
}

.upload-tips text {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* 文字输入区域 */
.text-input-area {
  margin-top: 32rpx;
  position: relative;
}

.text-input {
  width: 100%;
  min-height: 200rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 30rpx;
  color: #333;
  line-height: 1.5;
  border: 2rpx solid #e9ecef;
  transition: border-color 0.3s ease;
  box-sizing: border-box;
}

.text-input:focus {
  border-color: #1989fa;
}

.text-counter {
  position: absolute;
  bottom: 16rpx;
  right: 24rpx;
  font-size: 24rpx;
  color: #999;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  margin-top: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s ease;
  border: none;
}

.submit-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
}

.submit-btn.disabled {
  background: #ccc !important;
  box-shadow: none !important;
}

/* 状态横幅 */
.status-banner {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 24rpx 32rpx;
  border-radius: 20rpx;
  margin-bottom: 32rpx;
}

.status-banner.pending {
  background: linear-gradient(135deg, #ffeaa7 0%, #fab1a0 100%);
  color: #2d3436;
}

.status-icon {
  font-size: 48rpx;
}

.status-info {
  flex: 1;
}

.status-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.status-desc {
  font-size: 26rpx;
  opacity: 0.8;
}

/* 评分结果卡片 */
.grade-result-card {
  padding: 32rpx;
  border-radius: 20rpx;
  margin-bottom: 32rpx;
  background: linear-gradient(135deg, #00b894 0%, #00cec9 100%);
  color: white;
}

.grade-result-card.excellent {
  background: linear-gradient(135deg, #fd79a8 0%, #fdcb6e 100%);
}

.grade-result-card.good {
  background: linear-gradient(135deg, #74b9ff 0%, #0984e3 100%);
}

.grade-result-card.needs_review {
  background: linear-gradient(135deg, #a29bfe 0%, #6c5ce7 100%);
}

.grade-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 24rpx;
}

.grade-icon {
  font-size: 64rpx;
}

.grade-title {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.grade-desc {
  font-size: 28rpx;
  opacity: 0.9;
}

.score-detail {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
  font-size: 32rpx;
}

.score-value {
  font-size: 48rpx;
  font-weight: 700;
}

.score-total {
  opacity: 0.8;
}

/* 老师评语 */
.teacher-feedback {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
}

.feedback-content {
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.feedback-footer {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #666;
}

/* 提交内容预览 */
.submission-preview {
  padding-top: 32rpx;
  border-top: 1rpx solid #eee;
}

.submit-time {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 24rpx;
}

/* 图片展示 */
.preview-images,
.content-images {
  margin: 24rpx 0;
}

.image-scroll {
  width: 100%;
}

.image-list {
  display: flex;
  gap: 16rpx;
}

.preview-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.image-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.content-image {
  width: 100%;
  aspect-ratio: 1;
  border-radius: 12rpx;
}

.preview-text,
.content-text {
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 16rpx;
  margin-top: 32rpx;
  flex-wrap: wrap;
}

.resubmit-btn,
.history-btn,
.share-btn,
.action-btn {
  flex: 1;
  min-width: 200rpx;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.resubmit-btn {
  background: linear-gradient(135deg, #fd79a8 0%, #fdcb6e 100%);
  color: white;
}

.resubmit-btn.outline {
  background: white;
  border: 2rpx solid #fd79a8;
  color: #fd79a8;
}

.history-btn {
  background: white;
  border: 2rpx solid #ddd;
  color: #333;
}

.share-btn {
  background: linear-gradient(135deg, #55a3ff 0%, #003d82 100%);
  color: white;
}

.action-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.action-btn {
  background: white;
  border: 2rpx solid #ddd;
  color: #333;
}

/* 教师统计 */
.teacher-stats {
  display: flex;
  justify-content: space-around;
  margin: 24rpx 0;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
}

.stat-item {
  text-align: center;
}

.stat-label {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.stat-value {
  display: block;
  font-size: 44rpx;
  font-weight: 700;
  color: #1989fa;
}

.teacher-actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  padding-top: 32rpx;
}

/* 历史记录 */
.history-section {
  background: white;
  padding: 32rpx;
  margin: 24rpx;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.history-list {
  margin-top: 16rpx;
}

.history-item {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.submission-time {
  font-size: 28rpx;
  color: #333;
}

.submission-status {
  padding: 6rpx 12rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  color: white;
  background: #999;
}

.submission-status.graded,
.submission-status.reviewed {
  background: #07c160;
}

.submission-status.pending {
  background: #ff976a;
}

.history-grade {
  display: flex;
  align-items: center;
}

.grade-label {
  font-size: 26rpx;
  color: #999;
  margin-right: 12rpx;
}

.grade-value {
  font-size: 28rpx;
  font-weight: 500;
}

.grade-value.excellent {
  color: #a7745;
}

.grade-value.good {
  color: #ffc107;
}

.grade-value.needs_review {
  color: #dc3545;
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .upload-item,
  .upload-btn {
    width: 160rpx;
    height: 160rpx;
  }
  
  .action-buttons {
    flex-direction: column;
  }
  
  .action-buttons .resubmit-btn,
  .action-buttons .history-btn,
  .action-buttons .share-btn,
  .action-buttons .action-btn {
    flex: none;
  }
}

