/* 积分排行榜页面样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 0 32rpx;
}

/* 页面标题 */
.header {
  padding: 60rpx 0 40rpx;
  text-align: center;
  color: white;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 切换标签 */
.tab-bar {
  display: flex;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 60rpx;
  padding: 8rpx;
  margin-bottom: 40rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  border-radius: 52rpx;
  color: rgba(255, 255, 255, 0.8);
  font-size: 30rpx;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: white;
  color: #667eea;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 个人排名卡片 */
.my-rank-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.rank-info, .score-info {
  text-align: center;
}

.rank-label, .score-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.rank-number, .score-number {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}

/* 前三名展示 */
.top-three {
  display: flex;
  justify-content: center;
  align-items: flex-end;
  margin-bottom: 40rpx;
  gap: 20rpx;
}

.podium-item {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 32rpx 24rpx;
  text-align: center;
  position: relative;
  min-width: 160rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.1);
}

.podium-item.first {
  transform: scale(1.1);
  z-index: 3;
}

.podium-item.second {
  z-index: 2;
}

.podium-item.third {
  z-index: 1;
}

.podium-item .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-bottom: 16rpx;
  border: 4rpx solid #fff;
}

.podium-item .avatar.large {
  width: 96rpx;
  height: 96rpx;
}

.avatar-placeholder, .small-avatar-placeholder {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin: 0 auto 16rpx;
  border: 4rpx solid #fff;
}

.avatar-placeholder.large {
  width: 96rpx;
  height: 96rpx;
  font-size: 48rpx;
}

.podium-item .nickname {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.podium-item .score {
  display: block;
  font-size: 32rpx;
  color: #667eea;
  font-weight: bold;
}

.medal {
  position: absolute;
  top: -16rpx;
  right: -16rpx;
  font-size: 40rpx;
  z-index: 10;
}

.crown {
  position: absolute;
  top: -24rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 32rpx;
}

/* 排行榜列表 */
.leaderboard-list {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 40rpx;
}

.list-header {
  display: flex;
  align-items: center;
  padding: 32rpx;
  background: #f8f9fa;
  font-size: 28rpx;
  font-weight: bold;
  color: #666;
}

.list-header text:first-child {
  width: 120rpx;
}

.list-header text:nth-child(2) {
  flex: 1;
  text-align: left;
}

.list-header text:last-child {
  width: 120rpx;
  text-align: right;
}

.list-item {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background 0.2s ease;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item.current-user {
  background: #e3f2fd;
}

.rank {
  width: 120rpx;
  text-align: center;
}

.rank-number {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.user-info {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.small-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.small-avatar-placeholder {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin: 0;
  border: none;
}

.user-nickname {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.list-item .score {
  width: 120rpx;
  text-align: right;
}

.list-item .score-number {
  font-size: 32rpx;
  font-weight: bold;
  color: #667eea;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 0;
  color: rgba(255, 255, 255, 0.8);
}

.empty-icon {
  display: block;
  font-size: 120rpx;
  margin-bottom: 32rpx;
}

.empty-text {
  display: block;
  font-size: 36rpx;
  margin-bottom: 16rpx;
}

.empty-desc {
  display: block;
  font-size: 28rpx;
  opacity: 0.8;
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 80rpx 0;
  color: rgba(255, 255, 255, 0.8);
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid white;
  border-radius: 50%;
  margin: 0 auto 32rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 积分规则说明 */
.info-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.info-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

.info-item {
  margin-bottom: 12rpx;
}

.rule-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

/* 底部安全区域 */
.safe-bottom {
  height: 60rpx;
}