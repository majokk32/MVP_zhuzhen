/* 学习复盘页面样式 - 简化版本 */
page {
  background-color: #f5f5f5;
}

.container {
  padding: 20rpx;
}

/* 页面标题 */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx;
  background: white;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.task-count {
  font-size: 28rpx;
  color: #667eea;
  background: #f0f4ff;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
}

/* 今日任务列表 */
.tasks-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.task-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 2rpx solid #f0f0f0;
}

/* 过期任务特殊样式 */
.task-card.overdue {
  border-color: #ff6b6b;
  background: #fff5f5;
  transition: all 0.3s ease;
}

/* 过期状态文本 */
.task-status.overdue {
  color: #ff6b6b;
  font-size: 24rpx;
  font-weight: bold;
  background: #ffe5e5;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  margin-top: 8rpx;
}

.task-card:active {
  transform: scale(0.98);
  background: #f8f9ff;
}

.task-info {
  flex: 1;
  margin-right: 20rpx;
}

.task-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  line-height: 1.4;
  margin-bottom: 15rpx;
}

.task-meta {
  display: flex;
  align-items: center;
  gap: 15rpx;
  flex-wrap: wrap;
}

.task-subject {
  font-size: 24rpx;
  background: #667eea;
  color: white;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

.task-count {
  font-size: 24rpx;
  color: #ff9800;
  background: #fff8e1;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

.task-date {
  font-size: 24rpx;
  color: #ff9800;
  background: #fff8e1;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

.task-original {
  font-size: 24rpx;
  color: #999;
}

.task-actions {
  display: flex;
  justify-content: center;
  align-items: center;
}

.task-btn {
  width: 140rpx;
  height: 60rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.task-btn.complete {
  background: #4CAF50;
  color: white;
}

.task-btn.complete.disabled {
  background: #e8f5e8;
  color: #4CAF50;
}

/* 空状态 */
.empty-tasks {
  text-align: center;
  padding: 120rpx 40rpx;
  background: white;
  border-radius: 16rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
  display: block;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 15rpx;
  display: block;
  font-weight: 500;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
}

