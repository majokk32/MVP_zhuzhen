/* 个人中心样式 */
.container {
  min-height: 100vh;
  background: #f8f9fa;
  padding: 0;
}

/* 用户信息展示区 */
.user-profile-section {
  background: white;
  padding: 40rpx 30rpx;
  padding-top: calc(40rpx + constant(safe-area-inset-top));
  padding-top: calc(40rpx + env(safe-area-inset-top));
  border-bottom: 1rpx solid #f0f0f0;
}

/* 用户头像和昵称 */
.user-main-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 3rpx solid #f0f0f0;
}

.avatar-placeholder {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 3rpx solid #f0f0f0;
}

.avatar-icon {
  font-size: 50rpx;
  color: #ccc;
}

/* 昵称区域 */
.nickname-section {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.user-nickname {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.edit-nickname-btn {
  background: none;
  border: none;
  padding: 0;
  width: auto;
  height: auto;
  line-height: 1;
}

.edit-nickname-btn::after {
  border: none;
}

.edit-icon {
  font-size: 28rpx;
  color: #666;
}

/* 内容列表区 */
.content-list {
  background: white;
  margin-top: 12rpx;
}

.list-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item:active {
  background-color: #f8f9fa;
}

.item-content {
  flex: 1;
}

.item-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.item-desc {
  font-size: 26rpx;
  color: #999;
}

.item-arrow {
  font-size: 32rpx;
  color: #ccc;
  margin-left: 20rpx;
}

/* 退出登录 */
.logout-section {
  margin: 40rpx 30rpx;
  margin-bottom: 60rpx;
}

.logout-btn {
  width: 100%;
  height: 88rpx;
  background: white;
  color: #ff5722;
  border: 2rpx solid #ff5722;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: 500;
}

.logout-btn::after {
  border: none;
}

.logout-btn:active {
  background: #fff3f0;
}

/* 安全区域 */
.safe-bottom {
  height: env(safe-area-inset-bottom);
}