/* 个人中心样式 */
.container {
  min-height: 100vh;
  background: #f8f9fa;
  padding: 0;
}

/* 用户信息展示区 */
.user-profile-section {
  background: white;
  padding: 40rpx 30rpx;
  padding-top: calc(40rpx + constant(safe-area-inset-top));
  padding-top: calc(40rpx + env(safe-area-inset-top));
  border-bottom: 1rpx solid #f0f0f0;
}

/* 用户头像和昵称 */
.user-main-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 3rpx solid #f0f0f0;
}

.avatar-placeholder {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 3rpx solid #f0f0f0;
}

.avatar-icon {
  font-size: 50rpx;
  color: #ccc;
}

/* 昵称区域 */
.nickname-section {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.user-nickname {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.edit-nickname-btn {
  background: none;
  border: none;
  padding: 0;
  width: auto;
  height: auto;
  line-height: 1;
}

.edit-nickname-btn::after {
  border: none;
}

.edit-icon {
  font-size: 28rpx;
  color: #666;
}

/* 内容列表区 */
.content-list {
  background: white;
  margin-top: 12rpx;
}

.list-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item:active {
  background-color: #f8f9fa;
}

.item-content {
  flex: 1;
}

.item-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.item-desc {
  font-size: 26rpx;
  color: #999;
}

.item-arrow {
  font-size: 32rpx;
  color: #ccc;
  margin-left: 20rpx;
}

/* 退出登录 */
.logout-section {
  margin: 40rpx 30rpx;
  margin-bottom: 60rpx;
}

.logout-btn {
  width: 100%;
  height: 88rpx;
  background: white;
  color: #ff5722;
  border: 2rpx solid #ff5722;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: 500;
}

.logout-btn::after {
  border: none;
}

.logout-btn:active {
  background: #fff3f0;
}

/* 安全区域 */
.safe-bottom {
  height: env(safe-area-inset-bottom);
}

/* V1.0 学习数据可视化区域样式 */
.learning-data-section {
  margin: 24rpx;
  margin-bottom: 32rpx;
}

/* 核心数据大卡片 */
.core-stats-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: white;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.3);
}

.main-stat {
  text-align: center;
}

.stat-number {
  display: block;
  font-size: 72rpx;
  font-weight: bold;
  line-height: 1;
  margin-bottom: 12rpx;
}

.stat-label {
  font-size: 28rpx;
  opacity: 0.9;
}

.side-stats {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.side-stat {
  text-align: center;
}

.side-number {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.side-label {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 打卡图区域 */
.checkin-chart-section {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  margin-bottom: 24rpx;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.section-desc {
  font-size: 26rpx;
  color: #666;
}

/* 数据指标卡片组 */
.data-cards-section {
  display: flex;
  gap: 16rpx;
}

.data-card {
  flex: 1;
  background: white;
  border-radius: 16rpx;
  padding: 32rpx 20rpx;
  text-align: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.2s ease;
}

.data-card:active {
  transform: scale(0.98);
}

.card-number {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.card-label {
  font-size: 24rpx;
  color: #666;
}

/* V1.0 订阅状态视觉指示器 */
.subscription-indicator {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 500;
  margin-left: 16rpx;
}

.subscription-trial {
  background: linear-gradient(135deg, #ffd54f 0%, #ff9800 100%);
  color: white;
}

.subscription-premium {
  background: linear-gradient(135deg, #4caf50 0%, #2e7d32 100%);
  color: white;
}

.subscription-expired {
  background: linear-gradient(135deg, #f44336 0%, #d32f2f 100%);
  color: white;
}

/* 权限状态特殊显示 */
.list-item.permission-status .item-desc {
  font-weight: 500;
}

.list-item.permission-status .item-desc.trial {
  color: #ff9800;
}

.list-item.permission-status .item-desc.premium {
  color: #4caf50;
}

.list-item.permission-status .item-desc.expired {
  color: #f44336;
}