/* 批改页面样式 */
.container {
  min-height: 100vh;
  background: #f5f6fa;
  padding-bottom: env(safe-area-inset-bottom);
}

/* 任务头部 */
.task-header {
  background: white;
  padding: 32rpx;
  border-bottom: 1px solid #f0f0f0;
}

.task-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.task-stats {
  display: flex;
  gap: 40rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.stat-label {
  font-size: 26rpx;
  color: #999;
}

.stat-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 筛选栏 */
.filter-bar {
  background: white;
  padding: 24rpx 32rpx;
  border-bottom: 1px solid #f0f0f0;
}

.filter-tabs {
  display: flex;
  gap: 32rpx;
}

.filter-tab {
  font-size: 28rpx;
  color: #666;
  padding: 12rpx 0;
  position: relative;
  transition: all 0.3s;
}

.filter-tab.active {
  color: #667eea;
  font-weight: 500;
}

.filter-tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #667eea;
  border-radius: 2rpx;
}

/* 提交列表 */
.submissions {
  padding: 20rpx;
}

.submission-item {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.2s;
}

.submission-item:active {
  transform: scale(0.98);
}

.student-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
}

.student-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #f0f0f0;
}

.student-detail {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.student-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.submit-time {
  font-size: 24rpx;
  color: #999;
}

.submission-status {
  flex-shrink: 0;
}

.status-badge {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.status-badge.pending {
  background: #fff3cd;
  color: #856404;
}

.grade-badge {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.grade-badge.excellent {
  background: #d4edda;
  color: #155724;
}

.grade-badge.good {
  background: #fff3cd;
  color: #856404;
}

.grade-badge.review {
  background: #f8d7da;
  color: #721c24;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
  color: #999;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 32rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
}

.avatar-placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #999;
}

.empty-state text {
  font-size: 28rpx;
}

/* 批改详情 */
.grading-detail {
  background: white;
}

/* 学生信息栏 */
.student-bar {
  padding: 24rpx 32rpx;
  border-bottom: 1px solid #f0f0f0;
  background: white;
  position: sticky;
  top: 0;
  z-index: 10;
}

.navigation-btns {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-top: 20rpx;
}

.nav-btn {
  padding: 12rpx 24rpx;
  background: #f5f5f5;
  border: none;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #333;
}

.nav-btn:disabled {
  opacity: 0.5;
}

.nav-indicator {
  font-size: 26rpx;
  color: #666;
  padding: 0 16rpx;
}

/* 历史按钮 */
.history-btn {
  padding: 12rpx 20rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border: none;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: white;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.history-btn::after {
  border: none;
}

.history-icon {
  font-size: 20rpx;
}

/* 作业内容 */
.submission-content {
  padding: 32rpx;
  background: white;
  margin-bottom: 20rpx;
}

.section-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.section-title .icon {
  font-size: 32rpx;
}

.content-images {
  margin: 24rpx 0;
}

.image-scroll {
  width: 100%;
  white-space: nowrap;
}

.image-list {
  display: inline-flex;
  gap: 16rpx;
}

.content-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
  background: #f5f5f5;
}

.content-text {
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

/* 批改区域 */
.grading-section {
  padding: 32rpx;
  background: white;
}

/* 评分档位 */
.grade-options {
  display: flex;
  gap: 20rpx;
  margin-bottom: 32rpx;
}

.grade-option {
  flex: 1;
  padding: 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  text-align: center;
  transition: all 0.3s;
}

.grade-option.selected {
  border-color: #667eea;
  background: #f0f4ff;
}

.grade-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.grade-name {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.grade-desc {
  display: block;
  font-size: 24rpx;
  color: #999;
}

/* 分数输入 */
.score-input-area {
  margin-bottom: 32rpx;
}

.input-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.score-input-wrapper {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.score-input {
  flex: 1;
  height: 80rpx;
  padding: 0 24rpx;
  background: #f9f9f9;
  border: 1px solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 32rpx;
}

.score-total {
  font-size: 28rpx;
  color: #666;
}

/* 混合输入评语区域 */
.feedback-input-section {
  margin-bottom: 32rpx;
}

.feedback-input-section .input-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.feedback-input-section .input-label::before {
  content: '✍️';
  font-size: 24rpx;
}

/* 兼容传统评语输入 */
.feedback-input-area {
  margin-bottom: 32rpx;
  position: relative;
}

.feedback-input {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  background: #f9f9f9;
  border: 1px solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.6;
  box-sizing: border-box;
}

.text-counter {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  font-size: 24rpx;
  color: #999;
}

/* 快捷评语 */
.quick-feedback {
  margin-bottom: 32rpx;
}

.quick-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.quick-title::before {
  content: '💬';
  font-size: 20rpx;
}

.quick-list {
  width: 100%;
  white-space: nowrap;
}

.quick-items {
  display: inline-flex;
  gap: 16rpx;
}

.quick-item {
  padding: 12rpx 24rpx;
  background: #f5f5f5;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #666;
  flex-shrink: 0;
  transition: all 0.2s;
}

.quick-item:active {
  background: #667eea;
  color: white;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 24rpx;
  margin-top: 40rpx;
}

.action-buttons button {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-secondary {
  background: white;
  color: #667eea;
  border: 2rpx solid #667eea;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
}

.btn-primary.disabled {
  background: #ddd;
  color: #999;
}

/* 浮动操作 */
.float-actions {
  position: fixed;
  right: 32rpx;
  bottom: calc(32rpx + env(safe-area-inset-bottom));
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  z-index: 100;
}

.float-btn {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 20rpx 32rpx;
  background: white;
  border-radius: 50rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  font-size: 28rpx;
  color: #333;
}

.float-btn .icon {
  font-size: 32rpx;
}

/* 安全区域 */
.safe-bottom {
  height: env(safe-area-inset-bottom);
}