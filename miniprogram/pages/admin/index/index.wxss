/* pages/admin/index/index.wxss - 教师端任务列表（和学生端相同）*/
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f3f4f6;
}

/* 顶部标题和搜索区域 */
.header-section {
  background: white;
  padding: 20rpx 32rpx;
  padding-top: calc(20rpx + constant(safe-area-inset-top));
  padding-top: calc(20rpx + env(safe-area-inset-top));
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.title-search-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 24rpx;
}

.page-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #1f2937;
  flex-shrink: 0;
}

.search-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background: #f9fafb;
  border: 1rpx solid #e5e7eb;
}

.search-input-container {
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #f3f4f6;
}

.search-input-box {
  display: flex;
  align-items: center;
  background: #f3f4f6;
  border-radius: 24rpx;
  padding: 16rpx 20rpx;
  gap: 12rpx;
}

.search-icon {
  flex-shrink: 0;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #374151;
  background: transparent;
}

.search-placeholder {
  color: #9ca3af;
}

.clear-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 8rpx;
  border-radius: 50%;
  background: rgba(156, 163, 175, 0.1);
}

.cancel-btn {
  color: #3b82f6;
  font-size: 28rpx;
  padding: 8rpx 16rpx;
  flex-shrink: 0;
}

.user-greeting {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.user-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 2rpx solid #f0f0f0;
}

.greeting-text {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.greeting {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.role-tag {
  background: #1989fa;
  color: white;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 500;
}

/* 教师快捷操作 */
.teacher-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: rgba(255, 255, 255, 0.2);
  color: white;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.action-btn::after {
  display: none;
}

.action-icon {
  font-size: 24rpx;
}

/* 任务列表容器 */
.task-list-container {
  flex: 1;
  padding: 24rpx 32rpx;
  overflow: hidden;
}

.task-scroll-container {
  height: 100%;
}

.task-list-direct {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

/* 加载状态样式 */
.loading-more,
.no-more,
.loading-state {
  text-align: center;
  padding: 32rpx;
  color: #9ca3af;
  font-size: 26rpx;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f3f4f6;
  border-top: 4rpx solid #3b82f6;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 16rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 安全底部区域 */
.safe-bottom {
  height: constant(safe-area-inset-bottom);
  height: env(safe-area-inset-bottom);
  min-height: 20rpx;
}

.filter-tab {
  flex-shrink: 0;
  padding: 12rpx 24rpx;
  font-size: 28rpx;
  color: #666;
  background: #f8f9fa;
  border-radius: 25rpx;
  transition: all 0.3s ease;
  min-width: 100rpx;
  text-align: center;
}

.filter-tab.active {
  background: #1989fa;
  color: white;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(25, 137, 250, 0.3);
}

/* 任务列表容器 */
.task-list-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 24rpx;
  padding-bottom: calc(24rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
}

/* 任务滚动容器 */
.task-scroll-container {
  width: 100%;
}

.task-list-direct {
  padding: 0 24rpx;
}

/* 加载更多 */
.loading-more {
  padding: 30rpx;
  text-align: center;
}

.loading-text {
  font-size: 26rpx;
  color: #999;
}

/* 没有更多 */
.no-more {
  padding: 40rpx;
  text-align: center;
}

.no-more-text {
  font-size: 24rpx;
  color: #ccc;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-image {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.empty-btn {
  background: var(--primary-color);
  color: white;
  padding: 20rpx 60rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.empty-btn::after {
  display: none;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f0f0f0;
  border-top-color: var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 教研管理按钮 */
.teacher-admin-btn {
  position: fixed;
  right: 32rpx;
  bottom: calc(32rpx + constant(safe-area-inset-bottom));
  bottom: calc(32rpx + env(safe-area-inset-bottom));
  display: flex;
  flex-direction: column;
  align-items: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 25rpx;
  padding: 16rpx 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.3);
  z-index: 1000;
  transition: all 0.3s ease;
}

.teacher-admin-btn:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.2);
}

.admin-btn-icon {
  font-size: 32rpx;
  margin-bottom: 4rpx;
}

.admin-btn-text {
  font-size: 22rpx;
  color: white;
  font-weight: 500;
}

/* 底部安全区 */
.safe-bottom {
  height: constant(safe-area-inset-bottom);
  height: env(safe-area-inset-bottom);
}