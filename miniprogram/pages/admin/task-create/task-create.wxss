/* 创建新任务页样式 */
.container {
  min-height: 100vh;
  background: #f9fafb;
  padding: 32rpx;
}

/* 页面标题 */
.page-header {
  padding: 32rpx 0;
}

.page-title {
  font-size: 44rpx;
  font-weight: 700;
  color: #667eea;
}

/* 表单容器 */
.form-container {
  flex: 1;
}

/* 表单组 */
.form-group {
  margin-bottom: 32rpx;
}

.form-group.half {
  flex: 1;
}

/* 表单行（左右布局） */
.form-row {
  display: flex;
  gap: 24rpx;
  align-items: flex-start;
}

.form-row .form-group {
  margin-bottom: 0;
}

/* 表单标签 */
.form-label {
  display: block;
  color: #374151;
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
}

/* 表单输入框 */
.form-input {
  width: 100%;
  padding: 10rpx 24rpx;
  border: 1rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #111827;
  background: white;
  box-sizing: border-box;
  transition: all 0.3s ease;
  min-height: 60rpx;
  display: flex;
  align-items: center;
}

/* 日期时间行布局 */
.datetime-row {
  display: flex;
  gap: 16rpx;
}

.datetime-picker {
  flex: 1;
  display: flex;
  align-items: center;
}

.form-input:focus {
  border-color: #667eea;
  outline: none;
  box-shadow: none;
}

.form-input.error {
  border-color: #ef4444;
}

/* 选择器内的文本样式 */
.form-input text {
  display: block;
  width: 100%;
  color: #111827;
  font-size: 30rpx;
  line-height: 1.4;
  flex: 1;
  align-self: flex-start;
}

.form-input text.placeholder {
  color: #9ca3af;
}

/* 文本域 */
.form-textarea {
  width: 100%;
  padding: 30rpx 24rpx;
  border: 1rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #111827;
  background: white;
  min-height: 200rpx;
  box-sizing: border-box;
  transition: all 0.3s ease;
  line-height: 1.6;
}

.form-textarea:focus {
  border-color: #667eea;
  outline: none;
  box-shadow: none;
}

.form-textarea.error {
  border-color: #ef4444;
}

/* 日期时间选择器 */
.datetime-picker-wrapper {
  display: flex;
  gap: 20rpx;
}

.datetime-picker {
  flex: 1;
}

.picker-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 25rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.datetime-picker.error .picker-display {
  border-color: #ff6b6b;
  background: #fff5f5;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.picker-text.placeholder {
  color: #999;
}

.picker-icon {
  font-size: 28rpx;
  color: #666;
}

.datetime-preview {
  margin-top: 15rpx;
  font-size: 26rpx;
  color: #667eea;
  padding: 10rpx 20rpx;
  background: #f0f3ff;
  border-radius: 12rpx;
}

/* 选择器样式 */
.form-picker .picker-display {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 25rpx;
}

/* 错误提示 */
.error-text {
  color: #ff6b6b;
  font-size: 24rpx;
  margin-top: 10rpx;
}

/* 字数统计 */
.input-counter {
  text-align: right;
  font-size: 22rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 表单提示 */
.form-hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  line-height: 1.4;
}

/* 高级设置 */
.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-top: 1rpx solid #f0f0f0;
  margin-top: 20rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #666;
}

.toggle-icon {
  font-size: 24rpx;
  color: #999;
  transition: all 0.3s ease;
}

.toggle-icon.expanded {
  transform: rotate(180deg);
}

.advanced-settings {
  margin-top: 20rpx;
}

.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  font-size: 28rpx;
  color: #333;
}

.setting-input {
  width: 120rpx;
  padding: 15rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  text-align: center;
  font-size: 26rpx;
  border: 1rpx solid transparent;
}

.setting-input:focus {
  border-color: #667eea;
  background: white;
}

.setting-unit {
  font-size: 24rpx;
  color: #666;
  margin-left: 10rpx;
}

.setting-desc {
  font-size: 26rpx;
  color: #667eea;
}

/* 输入计数器 */
.input-counter {
  text-align: right;
  font-size: 24rpx;
  color: #9ca3af;
  margin-top: 8rpx;
}

/* 错误提示 */
.error-text {
  color: #ef4444;
  font-size: 24rpx;
  margin-top: 8rpx;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  padding: 32rpx;
  border-radius: 16rpx;
  background: #4B206E;
  color: white;
  font-size: 36rpx;
  font-weight: 600;
  border: none;
  margin-top: 48rpx;
  box-shadow: 0 8rpx 24rpx rgba(75, 32, 110, 0.3);
  transition: all 0.3s ease;
}

.submit-btn::after {
  border: none;
}

.submit-btn:disabled {
  background: #d1d5db;
  color: #9ca3af;
  box-shadow: none;
}

.submit-btn:active:not(:disabled) {
  background: #3c1a5b;
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(75, 32, 110, 0.4);
}

/* 安全区域 */
.safe-bottom {
  height: env(safe-area-inset-bottom);
  background: #f9fafb;
}