/* 课程作业管理页样式 */
.container {
  min-height: 100vh;
  background-color: #f5f6fa;
  position: relative;
}

/* 搜索和筛选栏 */
.search-filter-bar {
  background: white;
  padding: 20rpx;
  border-bottom: 1rpx solid #e5e5e5;
  position: sticky;
  top: 0;
  z-index: 100;
}

.search-wrapper {
  position: relative;
  margin-bottom: 20rpx;
}

.search-input {
  background: #f8f9fa;
  border-radius: 25rpx;
  padding: 20rpx 60rpx 20rpx 40rpx;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
}

.search-icon {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 28rpx;
  color: #999;
}

.filter-tabs {
  margin-top: 10rpx;
}

.filter-scroll {
  white-space: nowrap;
}

.filter-list {
  display: inline-flex;
}

.filter-tab {
  padding: 16rpx 32rpx;
  margin-right: 20rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s ease;
  white-space: nowrap;
}

.filter-tab.active {
  background: #667eea;
  color: white;
}

/* 任务列表 */
.task-list {
  padding: 20rpx;
  height: calc(100vh - 200rpx);
}

.task-manage-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.task-manage-card:active {
  transform: scale(0.98);
  background-color: #f8f9ff;
}

.task-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.task-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
  line-height: 1.4;
}

.task-status {
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  white-space: nowrap;
}

.status-ongoing {
  background: #4ecdc4;
  color: white;
}

.status-ended {
  background: #95a5a6;
  color: white;
}

.status-draft {
  background: #f39c12;
  color: white;
}

/* 任务元信息 */
.task-meta {
  margin-bottom: 20rpx;
}

.meta-item {
  display: flex;
  margin-bottom: 8rpx;
  font-size: 26rpx;
}

.meta-label {
  color: #999;
  margin-right: 10rpx;
}

.meta-value {
  color: #333;
  flex: 1;
}

/* 进度统计 */
.task-progress {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  background: #f8f9ff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.progress-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.progress-number {
  font-size: 32rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 8rpx;
}

.progress-label {
  font-size: 24rpx;
  color: #666;
}

.progress-divider {
  margin: 0 20rpx;
  color: #ccc;
  font-size: 24rpx;
}

/* 操作按钮 */
.task-actions {
  display: flex;
  justify-content: space-around;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.action-btn:active {
  background-color: #f8f9ff;
}

.action-btn.danger:active {
  background-color: #ffeaea;
}

.action-icon {
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.action-text {
  font-size: 22rpx;
  color: #666;
}

.action-btn.danger .action-text {
  color: #ff6b6b;
}

/* 创建任务浮动按钮 */
.fab-container {
  position: fixed;
  bottom: 100rpx;
  right: 40rpx;
  z-index: 1000;
}

.fab-btn {
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 30rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s ease;
}

.fab-btn:active {
  transform: scale(0.9);
}

.fab-icon {
  font-size: 48rpx;
  color: white;
  font-weight: bold;
}

/* 加载状态 */
.loading-state, .loading-more {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid #f3f3f3;
  border-top: 3rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 26rpx;
  color: #999;
}

/* 没有更多 */
.no-more {
  text-align: center;
  padding: 40rpx 0;
}

.no-more-text {
  font-size: 24rpx;
  color: #ccc;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  text-align: center;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 40rpx;
  max-width: 400rpx;
}

.empty-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 25rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  border: none;
}

.empty-btn::after {
  border: none;
}

/* 底部安全区域 */
.safe-bottom {
  height: env(safe-area-inset-bottom);
  background-color: #f5f6fa;
}