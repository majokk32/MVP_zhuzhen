/* 课程作业管理页样式 */
.container {
  min-height: 100vh;
  background-color: #f5f6fa;
  position: relative;
}

/* 搜索和筛选栏 */
.search-filter-bar {
  background: white;
  padding: 20rpx;
  border-bottom: 1rpx solid #e5e5e5;
  position: sticky;
  top: 0;
  z-index: 100;
}

.search-wrapper {
  position: relative;
  margin-bottom: 20rpx;
}

.search-input {
  background: #f8f9fa;
  border-radius: 25rpx;
  padding: 20rpx 60rpx 20rpx 40rpx;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
}

.search-icon {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 28rpx;
  color: #999;
}

.filter-tabs {
  margin-top: 10rpx;
}

.filter-scroll {
  white-space: nowrap;
}

.filter-list {
  display: inline-flex;
}

.filter-tab {
  padding: 16rpx 32rpx;
  margin-right: 20rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s ease;
  white-space: nowrap;
}

.filter-tab.active {
  background: #007aff;
  color: white;
}

/* 任务列表 */
.task-list {
  padding: 20rpx;
  height: calc(100vh - 200rpx);
}

.task-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-left: 8rpx solid transparent;
}

.task-card:active {
  transform: scale(0.98);
  background-color: #f8f9ff;
}

.task-card.status-ongoing {
  border-left-color: #007aff;
}

.task-card.status-ended {
  border-left-color: #95a5a6;
}

.task-content {
  flex: 1;
  min-width: 0;
  overflow: visible;
}

.task-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.task-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
  line-height: 1.4;
  word-wrap: break-word;
  word-break: break-all;
  min-width: 0;
}

.task-status {
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  white-space: nowrap;
}

.status-ongoing {
  color: #007aff;
  font-weight: 500;
}

.status-ended {
  color: #95a5a6;
  font-weight: 500;
}

/* 任务元信息 */
.task-meta {
  margin-bottom: 12rpx;
  font-size: 24rpx;
  color: #666;
  display: flex;
  flex-wrap: wrap;
  word-wrap: break-word;
}

.meta-label {
  color: #999;
  margin-right: 8rpx;
  white-space: nowrap;
}

.meta-value {
  color: #333;
  word-wrap: break-word;
  min-width: 0;
}

/* 简化的统计信息 */
.task-stats {
  display: flex;
  align-items: center;
  margin-top: 16rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 16rpx;
}

.stat-number {
  font-size: 28rpx;
  font-weight: bold;
  color: #007aff;
  margin-bottom: 4rpx;
}

.stat-label {
  font-size: 20rpx;
  color: #666;
}

.stat-divider {
  margin: 0 12rpx;
  color: #ccc;
  font-size: 20rpx;
}

/* 右箭头 */
.task-arrow {
  margin-left: 20rpx;
}

.arrow-icon {
  font-size: 32rpx;
  color: #ccc;
  font-weight: bold;
}


/* 创建任务浮动按钮 */
.fab-container {
  position: fixed;
  bottom: 100rpx;
  right: 40rpx;
  z-index: 1000;
}

.fab-btn {
  background: #007aff;
  border-radius: 50rpx;
  padding: 20rpx 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 30rpx rgba(0, 122, 255, 0.4);
  transition: all 0.3s ease;
  min-width: 120rpx;
}

.fab-btn:active {
  transform: scale(0.95);
}

.fab-icon {
  font-size: 32rpx;
  color: white;
  font-weight: bold;
  margin-right: 8rpx;
}

.fab-text {
  font-size: 26rpx;
  color: white;
  font-weight: 500;
}

/* 加载状态 */
.loading-state, .loading-more {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid #f3f3f3;
  border-top: 3rpx solid #007aff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 26rpx;
  color: #999;
}

/* 没有更多 */
.no-more {
  text-align: center;
  padding: 40rpx 0;
}

.no-more-text {
  font-size: 24rpx;
  color: #ccc;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  text-align: center;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 40rpx;
  max-width: 400rpx;
}

.empty-btn {
  background: linear-gradient(135deg, #007aff 0%, #0056b3 100%);
  color: white;
  border-radius: 25rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  border: none;
}

.empty-btn::after {
  border: none;
}

/* 底部安全区域 */
.safe-bottom {
  height: env(safe-area-inset-bottom);
  background-color: #f5f6fa;
}