/* pages/admin/teacher-center/teacher-center.wxss - 教研中心主页样式 */

.container {
  background-color: #f8fafc;
  min-height: 100vh;
  padding: 0 32rpx;
}

/* 页面头部 */
.header-section {
  padding: 40rpx 0 32rpx 0;
}

.welcome-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.page-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #4B206E;
  line-height: 1.2;
}

.welcome-text {
  font-size: 28rpx;
  color: #64748b;
  line-height: 1.4;
}

/* 统计概览卡片 */
.stats-overview {
  margin-bottom: 48rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 32rpx;
}

.stat-card {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.stat-card:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.1);
}

.stat-number {
  font-size: 40rpx;
  font-weight: bold;
  color: #4B206E;
  line-height: 1.2;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 22rpx;
  color: #64748b;
  text-align: center;
  line-height: 1.3;
}

/* 管理功能区域 */
.management-section {
  margin-bottom: 48rpx;
}

.management-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 32rpx;
}

.management-card {
  background: white;
  border-radius: 24rpx;
  padding: 48rpx 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.management-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  transform: scaleX(0);
  transform-origin: left;
  transition: transform 0.3s ease;
}

.management-card:active::before {
  transform: scaleX(1);
}

.management-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}

.card-icon {
  margin-bottom: 24rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  background: linear-gradient(135deg, #667eea20 0%, #764ba220 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.card-icon .icon {
  font-size: 40rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 12rpx;
  line-height: 1.3;
}

.card-desc {
  font-size: 24rpx;
  color: #64748b;
  line-height: 1.4;
  text-align: center;
}

/* 数据看板区域 */
.dashboard-section {
  margin-bottom: 48rpx;
}

/* 底部安全区域 */
.safe-bottom {
  height: 60rpx;
}

/* 加载状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(255, 255, 255, 0.9);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f4f6;
  border-top: 6rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #64748b;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 响应式适配 */
@media (max-width: 375px) {
  .container {
    padding: 0 24rpx;
  }
  
  .stats-grid {
    gap: 24rpx;
  }
  
  .management-grid {
    gap: 24rpx;
  }
  
  .stat-card {
    padding: 24rpx 12rpx;
  }
  
  .management-card {
    padding: 36rpx 20rpx;
  }
}