/* 学生总列表页样式 */
.container {
  min-height: 100vh;
  background-color: #f5f6fa;
  position: relative;
}

/* 搜索栏 */
.search-section {
  background: white;
  padding: 20rpx;
  border-bottom: 1rpx solid #e5e5e5;
}

.search-wrapper {
  position: relative;
}

.search-input {
  background: #f8f9fa;
  border-radius: 25rpx;
  padding: 20rpx 60rpx 20rpx 40rpx;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
}

.search-icon {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 28rpx;
  color: #999;
}

/* 统计概览 */
.stats-overview {
  background: white;
  padding: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1rpx solid #e5e5e5;
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stats-number {
  font-size: 44rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #666;
}

.stats-divider {
  width: 2rpx;
  height: 60rpx;
  background: #e5e5e5;
  margin: 0 40rpx;
}

/* 筛选标签 */
.filter-tabs {
  background: white;
  padding: 20rpx;
  border-bottom: 1rpx solid #e5e5e5;
  position: sticky;
  top: 0;
  z-index: 100;
}

.filter-scroll {
  white-space: nowrap;
}

.filter-list {
  display: inline-flex;
}

.filter-tab {
  padding: 16rpx 32rpx;
  margin-right: 20rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s ease;
  white-space: nowrap;
}

.filter-tab.active {
  background: #667eea;
  color: white;
}

/* 学生列表 */
.student-list {
  padding: 20rpx;
  height: calc(100vh - 320rpx);
}

.student-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.student-card:active {
  transform: scale(0.98);
  background-color: #f8f9ff;
}

/* 学生基本信息 */
.student-basic-info {
  display: flex;
  align-items: center;
  margin-bottom: 25rpx;
}

.avatar-wrapper {
  position: relative;
  margin-right: 25rpx;
}

.student-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  border: 3rpx solid #f0f0f0;
}

.avatar-placeholder {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 3rpx solid #e0e0e0;
}

.avatar-icon {
  font-size: 40rpx;
  color: #ccc;
}

.permission-badge {
  position: absolute;
  bottom: -5rpx;
  right: -10rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: bold;
  border: 2rpx solid white;
}

.permission-badge.paid {
  background: #ff6b6b;
  color: white;
}

.permission-badge.trial {
  background: #ffa726;
  color: white;
}

.student-details {
  flex: 1;
}

.student-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.student-meta {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.meta-item {
  display: flex;
  font-size: 24rpx;
}

.meta-label {
  color: #999;
  margin-right: 8rpx;
}

.meta-value {
  color: #666;
}

.meta-value.warning {
  color: #ff6b6b;
  font-weight: bold;
}

.action-arrow {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.arrow-icon {
  font-size: 32rpx;
  color: #ccc;
}

/* 学习统计 */
.student-stats {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f8f9ff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.stat-group {
  display: flex;
  gap: 40rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 28rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 6rpx;
}

.stat-label {
  font-size: 22rpx;
  color: #666;
}

/* 表现标签 */
.performance-tag {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: bold;
}

.performance-tag.excellent {
  background: #4ecdc4;
  color: white;
}

.performance-tag.good {
  background: #ffa726;
  color: white;
}

.performance-tag.needs_improvement {
  background: #ff6b6b;
  color: white;
}

/* 快速操作 */
.quick-actions {
  display: flex;
  justify-content: space-around;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.quick-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 15rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
  flex: 1;
  margin: 0 10rpx;
}

.quick-btn:active {
  background-color: #f8f9ff;
}

.btn-icon {
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.btn-text {
  font-size: 22rpx;
  color: #666;
}

/* 浮动操作按钮 */
.fab-actions {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  z-index: 1000;
}

.fab-btn {
  background: white;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.15);
  border-radius: 25rpx;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  transition: all 0.3s ease;
}

.fab-btn:active {
  transform: scale(0.95);
}

.fab-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.fab-text {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

/* 加载状态 */
.loading-state, .loading-more {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid #f3f3f3;
  border-top: 3rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 26rpx;
  color: #999;
}

/* 没有更多 */
.no-more {
  text-align: center;
  padding: 40rpx 0;
}

.no-more-text {
  font-size: 24rpx;
  color: #ccc;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  text-align: center;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  max-width: 400rpx;
}

/* 底部安全区域 */
.safe-bottom {
  height: env(safe-area-inset-bottom);
  background-color: #f5f6fa;
}