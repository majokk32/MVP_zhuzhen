/* 学生管理页面 - 现代化设计 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f6f7f9 0%, #eef1f5 100%);
  padding: 30rpx;
}

/* 头部统计区域 */
.stats-header {
  background: white;
  border-radius: 32rpx;
  padding: 48rpx;
  margin-bottom: 48rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.header-title {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.title-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.title-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #4B206E;
}

.stats-grid {
  display: flex;
  justify-content: space-between;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-number {
  font-size: 40rpx;
  font-weight: bold;
  color: #4B206E;
  margin-bottom: 8rpx;
}

.stat-number.paid {
  color: #10b981;
}

.stat-number.trial {
  color: #6b7280;
}

.stat-label {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 筛选按钮 */
.filter-buttons {
  margin-bottom: 32rpx;
}

.filter-btn-group {
  background: white;
  border-radius: 24rpx;
  padding: 8rpx;
  display: flex;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.filter-btn {
  flex: 1;
  padding: 20rpx 24rpx;
  border-radius: 18rpx;
  border: none;
  background: transparent;
  color: #6b7280;
  font-size: 24rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.filter-btn.active {
  background: #4B206E;
  color: white;
}

.filter-icon {
  margin-right: 8rpx;
}

/* 搜索框 */
.search-section {
  margin-bottom: 48rpx;
}

.search-wrapper {
  position: relative;
  display: flex;
  align-items: center;
}

.search-icon {
  position: absolute;
  left: 24rpx;
  font-size: 28rpx;
  color: #9ca3af;
  z-index: 1;
}

.search-input {
  width: 100%;
  padding: 20rpx 80rpx 20rpx 60rpx;
  background: white;
  border-radius: 24rpx;
  border: none;
  font-size: 28rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.search-clear {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.1);
  z-index: 2;
}

.clear-icon {
  font-size: 24rpx;
  color: #9ca3af;
  font-weight: bold;
}

/* 学生列表 */
.student-list {
  height: calc(100vh - 500rpx);
}

.student-card {
  background: white;
  border-radius: 32rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.2s ease;
}

.student-card:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}

.student-main-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.student-avatar-section {
  display: flex;
  align-items: center;
  flex: 1;
}

.avatar-container {
  position: relative;
  margin-right: 24rpx;
}

.student-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 4rpx solid #e5e7eb;
}

.avatar-placeholder {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #f3f4f6;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 4rpx solid #e5e7eb;
}

.avatar-icon {
  font-size: 32rpx;
  color: #9ca3af;
}

.status-indicator {
  position: absolute;
  bottom: -2rpx;
  right: -2rpx;
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  border: 4rpx solid white;
}

.status-indicator.online {
  background: #10b981;
}

.status-indicator.offline {
  background: #6b7280;
}

.student-info {
  flex: 1;
}

.student-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 8rpx;
}

.student-stats-text {
  font-size: 24rpx;
  color: #6b7280;
}

.student-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.permission-status {
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.permission-status.authorized {
  background: #10b981;
  color: white;
}

.permission-status.unauthorized {
  background: #6b7280;
  color: white;
}

.archive-btn {
  padding: 12rpx 24rpx;
  border-radius: 16rpx;
  border: none;
  font-size: 24rpx;
  font-weight: 600;
  transition: all 0.2s ease;
}

.archive-btn.active {
  background: #4B206E;
  color: white;
}

.archive-btn.inactive {
  background: #e5e7eb;
  color: #6b7280;
}

/* 加载状态 */
.loading-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #e5e7eb;
  border-top: 4rpx solid #4B206E;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-right: 16rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #6b7280;
}

.no-more {
  text-align: center;
  padding: 40rpx;
}

.no-more-text {
  font-size: 28rpx;
  color: #9ca3af;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-title {
  font-size: 32rpx;
  color: #6b7280;
  margin-bottom: 16rpx;
}

.empty-description {
  font-size: 28rpx;
  color: #9ca3af;
  margin-bottom: 32rpx;
}

.refresh-btn {
  background: #4B206E;
  color: white;
  padding: 16rpx 32rpx;
  border-radius: 20rpx;
  border: none;
  font-size: 28rpx;
}

/* 浮动操作按钮 */
.fab-actions {
  position: fixed;
  bottom: 80rpx;
  right: 30rpx;
  z-index: 1000;
}

.fab-btn {
  background: #4B206E;
  color: white;
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(75, 32, 110, 0.3);
  transition: all 0.3s ease;
}

.fab-btn:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 32rpx rgba(75, 32, 110, 0.4);
}

.fab-icon {
  font-size: 32rpx;
  margin-bottom: 4rpx;
}

.fab-text {
  font-size: 20rpx;
  font-weight: 500;
}

/* 底部安全区域 */
.safe-bottom {
  height: 34rpx;
  background: transparent;
}