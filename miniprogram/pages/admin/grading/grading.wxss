/* 批改任务台页面样式 */
.container {
  min-height: 100vh;
  background-color: #f5f6fa;
  position: relative;
}

/* 统计头部 */
.stats-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx;
  color: white;
}

.stats-title {
  font-size: 44rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  text-align: center;
}

.stats-summary {
  display: flex;
  align-items: center;
  justify-content: center;
}

.summary-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.summary-number {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.summary-label {
  font-size: 24rpx;
  opacity: 0.9;
}

.summary-divider {
  width: 2rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.3);
  margin: 0 60rpx;
}

/* 筛选栏 */
.filter-bar {
  background: white;
  padding: 20rpx;
  border-bottom: 1rpx solid #e5e5e5;
  position: sticky;
  top: 0;
  z-index: 100;
}

.filter-scroll {
  white-space: nowrap;
}

.filter-list {
  display: inline-flex;
}

.filter-tab {
  position: relative;
  display: flex;
  align-items: center;
  padding: 16rpx 32rpx;
  margin-right: 20rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s ease;
  white-space: nowrap;
}

.filter-tab.active {
  background: #667eea;
  color: white;
}

.filter-badge {
  background: #ff6b6b;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 10rpx;
  margin-left: 8rpx;
  min-width: 16rpx;
  text-align: center;
}

/* 任务列表 */
.grading-list {
  padding: 20rpx;
  height: calc(100vh - 280rpx);
}

.grading-task-card {
  position: relative;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.grading-task-card:active {
  transform: scale(0.98);
  background-color: #f8f9ff;
}

/* 任务头部 */
.task-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 25rpx;
}

.task-title-area {
  flex: 1;
  margin-right: 20rpx;
}

.task-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  line-height: 1.4;
}

.task-status {
  display: inline-block;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: normal;
}

.status-ongoing {
  background: #4ecdc4;
  color: white;
}

.status-ended {
  background: #95a5a6;
  color: white;
}

.task-date {
  font-size: 24rpx;
  color: #999;
  white-space: nowrap;
}

/* 进度指示器 */
.progress-indicator {
  padding: 25rpx;
  background: #f8f9ff;
  border-radius: 16rpx;
  margin-bottom: 25rpx;
}

.progress-stats {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.stat-group {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-number {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 6rpx;
}

.stat-group.submitted .stat-number {
  color: #4ecdc4;
}

.stat-group.pending .stat-number {
  color: #ff6b6b;
}

.stat-group.reviewed .stat-number {
  color: #667eea;
}

.stat-label {
  font-size: 22rpx;
  color: #666;
}

.stat-divider {
  color: #ddd;
  margin: 0 30rpx;
  font-size: 24rpx;
}

/* 进度条 */
.progress-bar {
  display: flex;
  align-items: center;
}

.progress-track {
  flex: 1;
  height: 8rpx;
  background: #e9ecef;
  border-radius: 4rpx;
  overflow: hidden;
  margin-right: 20rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea 0%, #4ecdc4 100%);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #666;
  font-weight: bold;
  min-width: 60rpx;
  text-align: right;
}

/* 紧急标识 */
.urgent-badge {
  position: absolute;
  top: 15rpx;
  right: 15rpx;
  background: #ff6b6b;
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  display: flex;
  align-items: center;
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.7; }
}

.urgent-icon {
  margin-right: 4rpx;
}

/* 快速操作 */
.quick-actions {
  display: flex;
  justify-content: space-around;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.quick-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 15rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
  flex: 1;
  margin: 0 10rpx;
}

.quick-btn:active {
  background-color: #f8f9ff;
}

.quick-btn.primary {
  background: #667eea;
  color: white;
}

.quick-btn.primary:active {
  background: #5a6fd8;
}

.btn-icon {
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.btn-text {
  font-size: 22rpx;
  color: #666;
}

.quick-btn.primary .btn-text {
  color: white;
}

/* 批量操作浮动按钮 */
.batch-actions {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  z-index: 1000;
}

.batch-btn {
  background: white;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.15);
  border-radius: 25rpx;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  transition: all 0.3s ease;
}

.batch-btn:active {
  transform: scale(0.95);
}

.batch-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.batch-text {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

/* 加载状态 */
.loading-state, .loading-more {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid #f3f3f3;
  border-top: 3rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 26rpx;
  color: #999;
}

/* 没有更多 */
.no-more {
  text-align: center;
  padding: 40rpx 0;
}

.no-more-text {
  font-size: 24rpx;
  color: #ccc;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  text-align: center;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 40rpx;
  max-width: 400rpx;
}

.empty-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 25rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  border: none;
}

.empty-btn::after {
  border: none;
}

/* 底部安全区域 */
.safe-bottom {
  height: env(safe-area-inset-bottom);
  background-color: #f5f6fa;
}