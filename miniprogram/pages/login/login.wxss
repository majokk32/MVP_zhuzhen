/* pages/login/login.wxss */
.login-container {
  min-height: 100vh !important;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
  display: flex !important;
  flex-direction: column !important;
  padding: 60rpx 40rpx !important;
  height: auto !important;
  box-sizing: border-box !important;
}

/* 应用头部Logo区域 */
.app-header {
  padding-top: 120rpx;
  display: flex;
  justify-content: center;
  margin-bottom: 60rpx;
}

.logo-container {
  text-align: center;
}

.logo-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
  display: block;
}

.app-name {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.app-slogan {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-top: 16rpx;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

/* 授权说明区域 */
.auth-description {
  background: rgba(255, 255, 255, 0.15);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 60rpx;
  backdrop-filter: blur(10rpx);
}

.auth-description text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.95);
  line-height: 1.5;
  text-align: center;
  display: block;
}

/* 登录内容 */
.login-content {
  flex: 1;
  background: white;
  border-radius: 40rpx 40rpx 0 0;
  padding: 60rpx 40rpx;
  margin: 0 -40rpx;
}

/* 授权按钮区域 */
.auth-buttons {
  margin-bottom: 80rpx;
}

.auth-btn {
  width: 100%;
  height: 96rpx;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
}

.auth-btn.primary {
  background: white;
  color: #667eea;
}

.auth-btn.secondary {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.auth-btn[disabled] {
  opacity: 0.6;
}

.btn-content {
  display: flex;
  align-items: center;
  justify-content: center;
}


/* 资料完善 */
.profile-section {
  margin-top: 40rpx;
}

.profile-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 40rpx;
  text-align: center;
}

/* 头像 */
.avatar-wrapper {
  display: flex;
  justify-content: center;
  margin-bottom: 40rpx;
}

.avatar-btn {
  position: relative;
  padding: 0;
  background: none;
  border: none;
}

.avatar-btn::after {
  border: none;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 4rpx solid #f0f0f0;
}

.avatar-edit {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.5);
  color: white;
  font-size: 24rpx;
  padding: 8rpx 0;
  border-radius: 0 0 80rpx 80rpx;
  text-align: center;
}

/* 昵称输入 */
.input-wrapper {
  margin-bottom: 40rpx;
}

.nickname-input {
  width: 100%;
  height: 96rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 48rpx;
  box-sizing: border-box;
}

.placeholder {
  color: #ccc;
}

/* 次要按钮 */
.btn-secondary {
  width: 100%;
  height: 96rpx;
  background: white;
  color: #667eea;
  font-size: 32rpx;
  font-weight: 500;
  border: 2rpx solid #667eea;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-secondary[disabled] {
  opacity: 0.6;
}

/* 服务条款 */
.service-terms {
  text-align: center;
  margin-bottom: 40rpx;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.service-terms text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.service-terms .link {
  color: white;
  text-decoration: underline;
  margin: 0 4rpx;
  font-weight: 500;
}

/* 开发环境控制 */
.dev-controls {
  text-align: center;
  margin-top: 20rpx;
}

.skip-btn {
  background: none;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  color: rgba(255, 255, 255, 0.7);
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
}