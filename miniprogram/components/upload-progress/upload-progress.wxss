/* 上传进度组件样式 */
.upload-progress-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-top-left-radius: 32rpx;
  border-top-right-radius: 32rpx;
  box-shadow: 0 -8rpx 40rpx rgba(0, 0, 0, 0.1);
  z-index: 1000;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

/* 整体进度区域 */
.overall-progress {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.progress-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.progress-count {
  font-size: 28rpx;
  color: #666;
}

/* 进度条样式 */
.progress-bar-container {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 15rpx;
}

.progress-bar {
  flex: 1;
  height: 12rpx;
  background: #f5f5f5;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #4CAF50, #45a049);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #666;
  min-width: 60rpx;
  text-align: right;
}

/* 上传统计 */
.upload-stats {
  display: flex;
  gap: 30rpx;
}

.stat-item {
  font-size: 24rpx;
  color: #999;
}

/* 上传列表 */
.upload-list {
  flex: 1;
  padding: 20rpx 30rpx;
}

.upload-item {
  display: flex;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
}

.upload-item:last-child {
  border-bottom: none;
}

/* 文件信息 */
.file-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.file-preview {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  overflow: hidden;
  margin-right: 20rpx;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
}

.preview-image {
  width: 100%;
  height: 100%;
}

.file-icon {
  font-size: 32rpx;
}

.file-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.file-name {
  font-size: 28rpx;
  color: #333;
  max-width: 200rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.file-size {
  font-size: 22rpx;
  color: #999;
}

/* 状态指示器 */
.status-indicator {
  display: flex;
  align-items: center;
  gap: 15rpx;
  position: relative;
}

/* 等待状态 */
.status-waiting {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.status-icon {
  font-size: 24rpx;
}

.status-text {
  font-size: 24rpx;
  color: #666;
}

/* 上传中状态 */
.status-uploading {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx;
}

.mini-progress-bar {
  width: 120rpx;
  height: 6rpx;
  background: #f0f0f0;
  border-radius: 3rpx;
  overflow: hidden;
}

.mini-progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #4CAF50, #45a049);
  border-radius: 3rpx;
  transition: width 0.3s ease;
}

.upload-info {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.progress-percent {
  font-size: 22rpx;
  color: #4CAF50;
  font-weight: 500;
  min-width: 50rpx;
  text-align: right;
}

.upload-speed {
  font-size: 20rpx;
  color: #999;
}

/* 成功状态 */
.status-success {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.status-icon.success {
  color: #4CAF50;
  font-size: 24rpx;
}

.upload-time {
  font-size: 20rpx;
  color: #999;
}

/* 失败状态 */
.status-failed {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.status-icon.failed {
  color: #f44336;
  font-size: 24rpx;
}

.error-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.error-message {
  font-size: 20rpx;
  color: #f44336;
  max-width: 150rpx;
  word-wrap: break-word;
}

.retry-btn {
  background: #ff9800 !important;
  color: white !important;
  border: none;
  font-size: 22rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.retry-btn::after {
  border: none;
}

/* 取消按钮 */
.cancel-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 24rpx;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background-color 0.2s ease;
}

.cancel-btn:active {
  background: #e0e0e0;
}

.cancel-icon {
  font-size: 20rpx;
  color: #999;
}

/* 操作按钮区域 */
.action-buttons {
  padding: 20rpx 30rpx 40rpx;
  display: flex;
  gap: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.btn-secondary, .btn-primary {
  flex: 1;
  border-radius: 44rpx;
  font-size: 28rpx;
  padding: 20rpx;
}

.btn-secondary {
  background: #f5f5f5;
  color: #666;
  border: none;
}

.btn-secondary::after {
  border: none;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
}

.btn-primary::after {
  border: none;
}

/* 简化版进度指示器 */
.simple-progress {
  position: fixed;
  bottom: 200rpx;
  left: 30rpx;
  right: 30rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  padding: 20rpx 30rpx;
  border-radius: 60rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  z-index: 500;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.simple-progress-bar {
  flex: 1;
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
}

.simple-progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #4CAF50, #45a049);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.simple-progress-text {
  font-size: 24rpx;
  color: #666;
  white-space: nowrap;
}

/* 状态对应的颜色 */
.upload-item.uploading {
  background: rgba(76, 175, 80, 0.02);
}

.upload-item.success {
  background: rgba(76, 175, 80, 0.05);
}

.upload-item.failed {
  background: rgba(244, 67, 54, 0.02);
}