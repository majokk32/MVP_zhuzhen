/* components/progressive-image/progressive-image.wxss */

.progressive-image {
  position: relative;
  display: inline-block;
  overflow: hidden;
  background: #f8f9fa;
}

.progressive-image__img {
  width: 100%;
  height: 100%;
  display: block;
  transition: opacity 0.3s ease;
  background: #f0f0f0;
}

/* 加载状态 */
.progressive-image__loading {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: rgba(248, 249, 250, 0.9);
  backdrop-filter: blur(2rpx);
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid #f0f0f0;
  border-top-color: #1989fa;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 16rpx;
}

.loading-text {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 20rpx;
}

/* 进度条 */
.loading-progress {
  width: 80%;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.progress-bar {
  flex: 1;
  height: 6rpx;
  background: #f0f0f0;
  border-radius: 3rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #1989fa 0%, #40a9ff 100%);
  border-radius: 3rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 20rpx;
  color: #999;
  min-width: 60rpx;
  text-align: center;
}

/* 错误状态 */
.progressive-image__error {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
  cursor: pointer;
}

.error-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
  opacity: 0.6;
}

.error-text {
  font-size: 24rpx;
  color: #999;
  text-align: center;
}

/* 缓存标识 */
.progressive-image__cache-badge {
  position: absolute;
  top: 8rpx;
  left: 8rpx;
  background: rgba(25, 137, 250, 0.8);
  color: white;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  font-size: 20rpx;
  backdrop-filter: blur(4rpx);
}

/* 压缩信息 */
.progressive-image__compress-info {
  position: absolute;
  bottom: 8rpx;
  right: 8rpx;
  background: rgba(0, 0, 0, 0.6);
  color: white;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  font-size: 20rpx;
  backdrop-filter: blur(4rpx);
}

/* 旋转动画 */
@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 响应式适配 */
@media screen and (max-width: 375px) {
  .loading-spinner {
    width: 32rpx;
    height: 32rpx;
  }
  
  .loading-text {
    font-size: 22rpx;
  }
  
  .error-icon {
    font-size: 40rpx;
  }
  
  .error-text {
    font-size: 22rpx;
  }
}

/* 暗色模式适配 */
@media (prefers-color-scheme: dark) {
  .progressive-image {
    background: #1f1f1f;
  }
  
  .progressive-image__img {
    background: #2d2d2d;
  }
  
  .progressive-image__loading {
    background: rgba(28, 28, 30, 0.9);
  }
  
  .loading-text {
    color: #999;
  }
  
  .progress-bar {
    background: #3a3a3c;
  }
  
  .progressive-image__error {
    background: #1f1f1f;
  }
  
  .error-text {
    color: #999;
  }
}

/* 高性能模式 */
.progressive-image--performance {
  contain: layout style paint;
  will-change: auto;
}

.progressive-image--performance .progressive-image__img {
  will-change: opacity;
  transform: translateZ(0);
}