/* 混合输入评语组件样式 */
.mixed-input-container {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 输入模式切换标签 */
.input-mode-tabs {
  display: flex;
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 6rpx;
  margin-bottom: 30rpx;
}

.mode-tab {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 20rpx 16rpx;
  border-radius: 8rpx;
  transition: all 0.3s ease;
  cursor: pointer;
}

.mode-tab.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.mode-tab .tab-icon {
  font-size: 24rpx;
}

.mode-tab .tab-label {
  font-size: 26rpx;
  font-weight: 500;
  color: #666;
}

.mode-tab.active .tab-label {
  color: white;
}

/* 文字输入区域 */
.text-input-area {
  min-height: 200rpx;
}

.feedback-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  background: #fafbfc;
  resize: none;
}

.feedback-textarea:focus {
  border-color: #667eea;
  outline: none;
  box-shadow: 0 0 0 3rpx rgba(102, 126, 234, 0.1);
}

.input-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 15rpx;
}

.text-counter {
  font-size: 24rpx;
  color: #999;
}

.quick-actions {
  display: flex;
  gap: 12rpx;
}

.quick-btn {
  background: #f0f0f0;
  color: #666;
  border: none;
  font-size: 24rpx;
}

.quick-btn::after {
  border: none;
}

/* 语音输入区域 */
.voice-input-area {
  min-height: 300rpx;
  display: flex;
  flex-direction: column;
}

/* 语音状态提示 */
.voice-status-tip {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 20rpx;
  background: #e8f4f8;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
}

.tip-icon {
  font-size: 24rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #546e7a;
  line-height: 1.4;
}

/* 录音控制面板 */
.voice-control-panel {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 30rpx;
  padding: 40rpx 0;
}

/* 录音按钮 */
.voice-button-container {
  position: relative;
}

.voice-button {
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.voice-button.idle {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  box-shadow: 0 8rpx 24rpx rgba(76, 175, 80, 0.3);
}

.voice-button.idle:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.4);
}

.voice-button.recording {
  background: linear-gradient(135deg, #f44336, #d32f2f);
  box-shadow: 0 8rpx 24rpx rgba(244, 67, 54, 0.4);
  animation: recordingPulse 1.5s infinite;
}

.voice-button.processing {
  background: linear-gradient(135deg, #FF9800, #F57C00);
  box-shadow: 0 8rpx 24rpx rgba(255, 152, 0, 0.3);
}

@keyframes recordingPulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

.voice-icon {
  font-size: 48rpx;
}

.voice-icon.recording {
  animation: blink 1s infinite;
}

@keyframes blink {
  0%, 50% { opacity: 1; }
  51%, 100% { opacity: 0.3; }
}

.voice-label {
  font-size: 26rpx;
  font-weight: 500;
  color: white;
  text-align: center;
}

.voice-hint {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.8);
  text-align: center;
  margin-top: 8rpx;
}

/* 录音动画效果 */
.recording-animation {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.wave-circle {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  animation: waveAnimation 2s infinite;
}

.wave-1 {
  width: 220rpx;
  height: 220rpx;
  animation-delay: 0s;
}

.wave-2 {
  width: 280rpx;
  height: 280rpx;
  animation-delay: 0.5s;
}

.wave-3 {
  width: 340rpx;
  height: 340rpx;
  animation-delay: 1s;
}

@keyframes waveAnimation {
  0% {
    opacity: 1;
    transform: translate(-50%, -50%) scale(0.5);
  }
  100% {
    opacity: 0;
    transform: translate(-50%, -50%) scale(1);
  }
}

/* 处理中动画 */
.processing-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 15rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 录音指示器 */
.voice-indicators {
  display: flex;
  gap: 40rpx;
  padding: 20rpx 30rpx;
  background: rgba(244, 67, 54, 0.1);
  border-radius: 12rpx;
  backdrop-filter: blur(10rpx);
}

.time-indicator,
.volume-indicator {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.indicator-label {
  font-size: 22rpx;
  color: #666;
}

.indicator-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #f44336;
}

/* 音量条 */
.volume-bars {
  display: flex;
  gap: 4rpx;
  align-items: end;
}

.volume-bar {
  width: 6rpx;
  background: #e0e0e0;
  border-radius: 3rpx;
  transition: all 0.2s ease;
}

.volume-bar.active {
  background: linear-gradient(to top, #4CAF50, #8BC34A);
}

/* 转写结果展示 */
.transcription-result {
  margin-top: 30rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  overflow: hidden;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  background: #f8f9fa;
  border-bottom: 1rpx solid #e0e0e0;
}

.result-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.result-actions {
  display: flex;
  gap: 12rpx;
}

.result-btn {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border: none;
}

.result-btn.primary {
  background: #667eea;
  color: white;
}

.result-btn::after {
  border: none;
}

.result-content {
  padding: 24rpx;
}

.transcription-text {
  font-size: 26rpx;
  line-height: 1.6;
  color: #333;
  word-break: break-all;
}

.transcription-editor {
  width: 100%;
  min-height: 120rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 16rpx;
  font-size: 26rpx;
  line-height: 1.6;
  resize: none;
}

/* 历史录音记录 */
.voice-history {
  margin-top: 30rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  overflow: hidden;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  background: #f8f9fa;
  border-bottom: 1rpx solid #e0e0e0;
}

.history-title {
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
}

.clear-history-btn {
  font-size: 22rpx;
  color: #999;
  background: transparent;
  border: none;
}

.clear-history-btn::after {
  border: none;
}

.history-list {
  max-height: 200rpx;
}

.history-item {
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  gap: 15rpx;
  align-items: center;
}

.history-item:last-child {
  border-bottom: none;
}

.history-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  min-width: 120rpx;
}

.history-time {
  font-size: 22rpx;
  color: #999;
}

.history-duration {
  font-size: 20rpx;
  color: #ccc;
}

.history-content {
  flex: 1;
  min-width: 0;
}

.history-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.history-actions {
  min-width: 80rpx;
}

.history-btn {
  font-size: 22rpx;
  background: #667eea;
  color: white;
  border: none;
}

.history-btn::after {
  border: none;
}

/* 底部工具栏 */
.input-toolbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0 0;
  border-top: 1rpx solid #f0f0f0;
  margin-top: 30rpx;
}

.toolbar-left {
  display: flex;
  gap: 12rpx;
}

.toolbar-btn {
  font-size: 24rpx;
  color: #999;
  background: transparent;
  border: 1rpx solid #e0e0e0;
}

.toolbar-btn::after {
  border: none;
}

.toolbar-right {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.word-count {
  font-size: 24rpx;
  color: #999;
}

.confirm-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 24rpx;
  padding: 16rpx 32rpx;
  font-size: 26rpx;
  font-weight: 500;
}

.confirm-btn.disabled {
  background: #e0e0e0;
  color: #999;
}

.confirm-btn::after {
  border: none;
}