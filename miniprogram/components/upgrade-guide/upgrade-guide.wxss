/* components/upgrade-guide/upgrade-guide.wxss */

.upgrade-guide-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.upgrade-guide-mask.show {
  opacity: 1;
  visibility: visible;
}

.upgrade-guide-container {
  width: 640rpx;
  max-height: 80vh;
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  transform: scale(0.8);
  transition: transform 0.3s ease;
}

.upgrade-guide-mask.show .upgrade-guide-container {
  transform: scale(1);
}

/* 头部样式 */
.upgrade-header {
  padding: 48rpx 40rpx 24rpx;
  text-align: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  position: relative;
}

.upgrade-header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="pattern" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse"><circle cx="10" cy="10" r="1" fill="white" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23pattern)"/></svg>');
  opacity: 0.3;
}

.upgrade-icon {
  font-size: 80rpx;
  line-height: 1;
  margin-bottom: 16rpx;
  position: relative;
  z-index: 1;
}

.upgrade-title {
  font-size: 36rpx;
  font-weight: 600;
  line-height: 1.2;
  position: relative;
  z-index: 1;
}

/* 内容区域 */
.upgrade-content {
  padding: 32rpx 40rpx;
  background: #f8f9fa;
}

.content-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #666;
  text-align: center;
  margin-bottom: 24rpx;
}

.blocked-feature {
  background: #fff3cd;
  border: 2rpx solid #ffeeba;
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  font-size: 26rpx;
  color: #856404;
  text-align: center;
}

.feature-name {
  font-weight: 600;
  color: #c49400;
}

/* 权益列表 */
.benefits-section {
  padding: 32rpx 40rpx;
  background: white;
}

.benefits-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  text-align: center;
}

.benefits-list {
  margin-bottom: 24rpx;
}

.benefit-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
  padding: 12rpx 0;
}

.benefit-icon {
  width: 32rpx;
  height: 32rpx;
  background: #52c41a;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
  margin-right: 16rpx;
  flex-shrink: 0;
  margin-top: 4rpx;
}

.benefit-text {
  font-size: 28rpx;
  line-height: 1.5;
  color: #666;
  flex: 1;
}

.view-more-benefits {
  text-align: center;
  color: #1989fa;
  font-size: 26rpx;
  padding: 16rpx;
  border-radius: 8rpx;
  background: #f0f9ff;
  border: 1rpx solid #bae7ff;
}

/* 操作按钮 */
.action-buttons {
  padding: 24rpx 40rpx 32rpx;
  background: white;
}

.upgrade-button {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  border: none;
  transition: all 0.2s ease;
}

.upgrade-button.primary {
  background: linear-gradient(135deg, #1989fa 0%, #10239e 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(25, 137, 250, 0.3);
}

.upgrade-button.primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(25, 137, 250, 0.3);
}

.upgrade-button.secondary {
  background: #f6f6f6;
  color: #666;
  border: 2rpx solid #e6e6e6;
}

.upgrade-button.secondary:active {
  background: #ebebeb;
}

.upgrade-button.ghost {
  background: transparent;
  color: #999;
  font-size: 26rpx;
  font-weight: 400;
  margin-bottom: 0;
}

.upgrade-button.ghost:active {
  color: #666;
}

/* 底部提示 */
.bottom-tips {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  padding: 24rpx 40rpx;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}

.tip-item {
  font-size: 22rpx;
  color: white;
  text-align: center;
  opacity: 0.9;
  flex: 1;
  min-width: 120rpx;
  padding: 8rpx 4rpx;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .upgrade-guide-container {
    width: 90vw;
  }
  
  .upgrade-header {
    padding: 40rpx 32rpx 20rpx;
  }
  
  .upgrade-icon {
    font-size: 64rpx;
  }
  
  .upgrade-title {
    font-size: 32rpx;
  }
  
  .upgrade-content,
  .benefits-section,
  .action-buttons {
    padding: 24rpx 32rpx;
  }
}

/* 动画优化 */
.upgrade-guide-mask {
  backdrop-filter: blur(4rpx);
  -webkit-backdrop-filter: blur(4rpx);
}

.benefit-item {
  animation: slideInUp 0.3s ease forwards;
  opacity: 0;
  transform: translateY(20rpx);
}

.benefit-item:nth-child(1) { animation-delay: 0.1s; }
.benefit-item:nth-child(2) { animation-delay: 0.2s; }
.benefit-item:nth-child(3) { animation-delay: 0.3s; }
.benefit-item:nth-child(4) { animation-delay: 0.4s; }

@keyframes slideInUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 无障碍支持 */
.upgrade-button:focus {
  outline: 4rpx solid #bae7ff;
  outline-offset: 2rpx;
}