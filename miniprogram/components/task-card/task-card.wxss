/* components/task-card/task-card.wxss */
.task-card {
  position: relative;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  /* 初始状态（用于动画） */
  opacity: 0;
  transform: translateY(20rpx);
}

.task-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 置顶卡片特殊样式 */
.task-card-extra {
  border: 2rpx solid var(--primary-color);
  background: linear-gradient(135deg, #fff 0%, #f0f8ff 100%);
}

/* 置顶标记 */
.pin-badge {
  position: absolute;
  top: -10rpx;
  right: 30rpx;
  background: var(--primary-color);
  color: white;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  display: flex;
  align-items: center;
  gap: 4rpx;
  z-index: 1;
}

.pin-icon {
  font-size: 20rpx;
}

/* 权限标记 */
.permission-badge {
  position: absolute;
  top: -10rpx;
  left: 30rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  display: flex;
  align-items: center;
  gap: 4rpx;
  z-index: 1;
}

.permission-badge.trial {
  background: rgba(255, 151, 106, 0.9);
  color: white;
}

.permission-icon {
  font-size: 20rpx;
}

.permission-text {
  font-weight: 500;
}

/* 卡片主体 */
.card-body {
  position: relative;
}

/* 上部分：标题和评价 */
.card-top {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 40rpx;
}

.card-title {
  flex: 1;
  margin-right: 20rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
  /* 标题最多显示2行 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 右上角评价状态 */
.card-evaluation {
  display: flex;
  align-items: center;
}

.status-badge {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-default {
  background: #f5f5f5;
  color: #999;
}

.status-primary {
  background: rgba(25, 137, 250, 0.1);
  color: var(--primary-color);
}

.status-warning {
  background: rgba(255, 151, 106, 0.1);
  color: var(--warning-color);
}

.status-success {
  background: rgba(7, 193, 96, 0.1);
  color: var(--success-color);
}

.score-text {
  font-size: 22rpx;
  color: var(--success-color);
  font-weight: 500;
}


/* 下部分：状态和日期 */
.card-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 左下角任务状态 */
.task-status {
  display: flex;
  align-items: center;
}

.status-label {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: white;
}

/* 不同状态的样式 */
.status-normal {
  background: #1989fa;
}

.status-completed {
  background: #07c160;
}

.status-ended {
  background: #999;
}

.status-extra {
  background: #ff976a;
}

/* 右下角日期 */
.card-date {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.date-text {
  font-weight: 500;
}

/* 提交状态指示器 */
.submit-indicator {
  position: absolute;
  top: 30rpx;
  left: 10rpx;
  width: 8rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
}

.indicator-dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background: #ddd;
}

.indicator-empty {
  background: #ddd;
}

.indicator-pending {
  background: var(--warning-color);
  animation: pulse 2s infinite;
}

.indicator-done {
  background: var(--success-color);
}

/* 脉冲动画 */
@keyframes pulse {
  0% {
    box-shadow: 0 0 0 0 rgba(255, 151, 106, 0.7);
  }
  70% {
    box-shadow: 0 0 0 10rpx rgba(255, 151, 106, 0);
  }
  100% {
    box-shadow: 0 0 0 0 rgba(255, 151, 106, 0);
  }
}