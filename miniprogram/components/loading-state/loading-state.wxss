/* components/loading-state/loading-state.wxss */

.loading-state-container {
  width: 100%;
  min-height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 加载状态样式 */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
}

/* 旋转加载器 */
.spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f4f6;
  border-top: 4rpx solid #1989fa;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 脉冲加载器 */
.pulse-dots {
  display: flex;
  gap: 8rpx;
  margin-bottom: 24rpx;
}

.pulse-dot {
  width: 16rpx;
  height: 16rpx;
  background: #1989fa;
  border-radius: 50%;
  animation: pulse 1.4s ease-in-out infinite both;
}

.pulse-dot:nth-child(1) { animation-delay: -0.32s; }
.pulse-dot:nth-child(2) { animation-delay: -0.16s; }

@keyframes pulse {
  0%, 80%, 100% {
    transform: scale(0.6);
    opacity: 0.5;
  }
  40% {
    transform: scale(1);
    opacity: 1;
  }
}

/* 加载文字 */
.loading-text {
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

/* 错误状态样式 */
.error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
  padding: 80rpx 40rpx;
}

.error-icon {
  font-size: 80rpx;
  opacity: 0.8;
}

.error-text {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  line-height: 1.5;
}

.retry-button {
  background: #1989fa;
  color: white;
  border: none;
  border-radius: 44rpx;
  padding: 16rpx 48rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: background 0.2s ease;
}

.retry-button:active {
  background: #147ec7;
  transform: translateY(2rpx);
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
  padding: 80rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  text-align: center;
  line-height: 1.5;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .loading-state-container {
    min-height: 160rpx;
  }
  
  .loading-state,
  .error-state,
  .empty-state {
    padding: 60rpx 32rpx;
  }
  
  .spinner {
    width: 48rpx;
    height: 48rpx;
    border-width: 3rpx;
  }
  
  .empty-icon {
    font-size: 100rpx;
  }
  
  .error-icon {
    font-size: 64rpx;
  }
}

/* 浅色主题适配 */
.loading-state-container.light-theme {
  background: #fafafa;
}

.loading-state-container.light-theme .loading-text {
  color: #999;
}

.loading-state-container.light-theme .error-text {
  color: #666;
}

.loading-state-container.light-theme .empty-text {
  color: #999;
}

/* 深色主题适配 */
.loading-state-container.dark-theme {
  background: #1a1a1a;
}

.loading-state-container.dark-theme .spinner {
  border-color: #333;
  border-top-color: #1989fa;
}

.loading-state-container.dark-theme .loading-text {
  color: #ccc;
}

.loading-state-container.dark-theme .error-text {
  color: #ccc;
}

.loading-state-container.dark-theme .empty-text {
  color: #999;
}