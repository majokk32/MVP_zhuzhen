/* 沉浸式批改导航组件样式 */
.grading-navigator-container {
  background: white;
  border-radius: 0 0 24rpx 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
}

/* 顶部进度指示器 */
.progress-header {
  padding: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  position: relative;
}

.progress-track {
  position: relative;
  height: 8rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 4rpx;
  margin-bottom: 25rpx;
  overflow: visible;
}

.progress-fill {
  height: 100%;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 4rpx;
  transition: width 0.5s cubic-bezier(0.4, 0, 0.2, 1);
}

.progress-indicator {
  position: absolute;
  top: -8rpx;
  transform: translateX(-50%);
  transition: left 0.5s cubic-bezier(0.4, 0, 0.2, 1);
}

.indicator-dot {
  width: 24rpx;
  height: 24rpx;
  background: white;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  margin: 0 auto 8rpx;
}

.indicator-label {
  font-size: 22rpx;
  color: white;
  text-align: center;
  white-space: nowrap;
  font-weight: 500;
}

/* 批改统计信息 */
.grading-stats {
  display: flex;
  gap: 30rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.stat-icon {
  font-size: 24rpx;
}

.stat-number {
  font-size: 32rpx;
  font-weight: 700;
  color: white;
}

.stat-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 学生信息卡片 */
.student-info-card {
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #f0f0f0;
}

.student-main {
  display: flex;
  align-items: center;
  flex: 1;
}

.student-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 20rpx;
}

.avatar-placeholder {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  font-size: 32rpx;
}

.student-details {
  flex: 1;
}

.student-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.submission-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex-wrap: wrap;
}

.attempt-info, .time-info {
  font-size: 24rpx;
  color: #666;
}

.submission-status {
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.submission-status.pending {
  background: #fff3cd;
  color: #856404;
}

.submission-status.reviewed {
  background: #d4edda;
  color: #155724;
}

/* 快捷操作工具栏 */
.quick-actions {
  display: flex;
  gap: 15rpx;
}

.action-icon-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background: #f8f9fa;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.action-icon-btn:active {
  transform: scale(0.95);
  background: #e9ecef;
}

.action-icon-btn::after {
  border: none;
}

.action-icon {
  font-size: 24rpx;
}

.action-icon.flagged {
  color: #dc3545;
}

/* 导航控制区 */
.navigation-controls {
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.nav-section {
  flex: 1;
  display: flex;
}

.nav-section.center {
  justify-content: center;
  flex-direction: column;
  align-items: center;
}

.nav-section.right {
  justify-content: flex-end;
}

.nav-btn {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 20rpx 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
}

.nav-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.4);
}

.nav-btn.disabled {
  background: #e9ecef;
  color: #6c757d;
  box-shadow: none;
  transform: none;
}

.nav-btn::after {
  border: none;
}

.btn-icon {
  font-size: 24rpx;
  font-weight: 700;
}

/* 快捷跳转 */
.quick-jump {
  margin-bottom: 15rpx;
}

.jump-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 24rpx;
  background: #f8f9fa;
  border: 2rpx solid #dee2e6;
  border-radius: 24rpx;
  font-size: 26rpx;
  transition: all 0.2s ease;
}

.jump-btn:active {
  background: #e9ecef;
  border-color: #adb5bd;
}

.jump-btn::after {
  border: none;
}

.current-position {
  font-weight: 700;
  color: #667eea;
}

.total-count {
  color: #6c757d;
}

.jump-icon {
  font-size: 20rpx;
}

/* 手势提示 */
.gesture-hint {
  padding: 8rpx 16rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 16rpx;
}

.hint-text {
  font-size: 20rpx;
  color: #667eea;
}

/* 智能推荐导航 */
.smart-navigation {
  padding: 30rpx;
  background: #f8f9fa;
  border-top: 1rpx solid #dee2e6;
}

.smart-nav-header {
  margin-bottom: 20rpx;
}

.smart-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-right: 12rpx;
}

.smart-subtitle {
  font-size: 22rpx;
  color: #6c757d;
}

.smart-options {
  width: 100%;
}

.smart-option-list {
  display: flex;
  gap: 20rpx;
  padding-bottom: 10rpx;
}

.smart-option {
  display: flex;
  align-items: center;
  gap: 15rpx;
  padding: 20rpx 24rpx;
  background: white;
  border: 1rpx solid #dee2e6;
  border-radius: 16rpx;
  min-width: 240rpx;
  flex-shrink: 0;
  transition: all 0.2s ease;
}

.smart-option:active {
  transform: translateY(1rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.smart-option::after {
  border: none;
}

.smart-option.urgent {
  border-color: #ffc107;
  background: #fff9e6;
}

.smart-option.priority {
  border-color: #dc3545;
  background: #ffebee;
}

.option-icon {
  font-size: 32rpx;
}

.option-content {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.option-title {
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
}

.option-desc {
  font-size: 22rpx;
  color: #6c757d;
}

/* 批改进度提醒 */
.progress-reminder {
  padding: 20rpx 30rpx;
  background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
  color: white;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.reminder-content {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex: 1;
}

.reminder-icon {
  font-size: 28rpx;
}

.reminder-text {
  font-size: 26rpx;
  font-weight: 500;
}

.reminder-action {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: none;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.reminder-action::after {
  border: none;
}

/* 快捷键提示 */
.keyboard-shortcuts {
  padding: 20rpx 30rpx;
  background: #343a40;
  color: white;
}

.shortcuts-header {
  font-size: 24rpx;
  font-weight: 600;
  margin-bottom: 15rpx;
  color: #f8f9fa;
}

.shortcuts-list {
  display: flex;
  gap: 30rpx;
  flex-wrap: wrap;
}

.shortcut-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.shortcut-key {
  background: #495057;
  color: #f8f9fa;
  padding: 6rpx 12rpx;
  border-radius: 6rpx;
  font-size: 20rpx;
  font-family: monospace;
  font-weight: 600;
}

.shortcut-desc {
  font-size: 22rpx;
  color: #adb5bd;
}

/* 作业列表弹窗 */
.submission-list-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  background: white;
  border-radius: 24rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.modal-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #dee2e6;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.close-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 24rpx;
  background: #f8f9fa;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #6c757d;
}

.close-btn::after {
  border: none;
}

.submission-items {
  flex: 1;
  overflow-y: auto;
}

.submission-item {
  width: 100%;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background: white;
  display: flex;
  align-items: center;
  justify-content: space-between;
  transition: background-color 0.2s ease;
}

.submission-item:active {
  background: #f8f9fa;
}

.submission-item.current {
  background: #e3f2fd;
  border-color: #2196f3;
}

.submission-item::after {
  border: none;
}

.item-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.item-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin-right: 20rpx;
}

.item-avatar.placeholder {
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.item-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.item-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.item-time {
  font-size: 22rpx;
  color: #6c757d;
}

.item-status {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx;
}

.status-badge {
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.status-badge.pending {
  background: #fff3cd;
  color: #856404;
}

.status-badge.reviewed {
  background: #d4edda;
  color: #155724;
}

.item-index {
  font-size: 20rpx;
  color: #adb5bd;
}

/* 响应式适配 */
@media screen and (max-width: 375px) {
  .navigation-controls {
    padding: 20rpx;
  }
  
  .nav-btn {
    padding: 16rpx 24rpx;
    font-size: 26rpx;
  }
  
  .smart-option {
    min-width: 200rpx;
    padding: 16rpx 20rpx;
  }
}