/* components/data-dashboard/data-dashboard.wxss */

.data-dashboard {
  padding: 24rpx;
  background: #f8f9fa;
  min-height: 100vh;
}

/* 看板头部 */
.dashboard-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
  padding: 24rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.header-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.dashboard-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.real-time-indicator {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  background: #52c41a;
  border-radius: 50%;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

.status-text {
  font-size: 24rpx;
  color: #666;
}

.time-range-picker {
  margin: 0 16rpx;
}

.picker-display {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  background: #f0f9ff;
  border: 1rpx solid #bae7ff;
  border-radius: 8rpx;
}

.picker-text {
  font-size: 24rpx;
  color: #1989fa;
}

.picker-arrow {
  font-size: 18rpx;
  color: #1989fa;
}

.header-actions {
  display: flex;
  gap: 12rpx;
}

.refresh-btn, .export-btn {
  background: #fff;
  color: #666;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 22rpx;
  padding: 8rpx 12rpx;
}

/* 统计卡片区域 */
.stats-section {
  margin-bottom: 32rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.stats-card {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.stats-card:active {
  transform: scale(0.98);
}

.stats-card.loading {
  opacity: 0.7;
  pointer-events: none;
}

.card-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-bottom: 16rpx;
}

.card-content {
  position: relative;
}

.card-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #333;
  line-height: 1.2;
  margin-bottom: 8rpx;
}

.card-label {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 12rpx;
}

.card-trend {
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.trend-indicator {
  font-size: 24rpx;
  font-weight: bold;
}

.trend-rate {
  font-size: 22rpx;
  color: #666;
}

.mini-chart {
  position: absolute;
  right: 0;
  top: 0;
  width: 60rpx;
  height: 40rpx;
  opacity: 0.3;
}

.chart-line {
  width: 100%;
  height: 2rpx;
  background: linear-gradient(45deg, transparent 40%, #1989fa 50%, transparent 60%);
}

/* 图表区域 */
.charts-section {
  margin-bottom: 32rpx;
}

.chart-container {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.chart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.chart-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.chart-subtitle {
  font-size: 22rpx;
  color: #666;
}

.chart-content {
  height: 400rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.chart-placeholder {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  padding: 60rpx;
  background: #fafafa;
  border-radius: 8rpx;
  border: 2rpx dashed #ddd;
  width: 100%;
}

/* 快捷操作区域 */
.actions-section {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 4rpx;
}

.actions-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.action-item {
  background: white;
  border-radius: 12rpx;
  padding: 24rpx 16rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.action-item:active {
  transform: scale(0.95);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.1);
}

.action-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
  display: block;
}

.action-label {
  font-size: 24rpx;
  color: #666;
  display: block;
}

/* 实时状态栏 */
.status-bar {
  display: flex;
  background: white;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  margin-bottom: 32rpx;
}

.status-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 0 16rpx;
  border-right: 1rpx solid #f0f0f0;
}

.status-item:last-child {
  border-right: none;
}

.status-label {
  font-size: 22rpx;
  color: #666;
}

.status-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.health-indicator {
  display: flex;
  align-items: center;
  gap: 8rpx;
  width: 100%;
  max-width: 120rpx;
}

.health-bar {
  height: 8rpx;
  background: #52c41a;
  border-radius: 4rpx;
  flex: 1;
  transition: all 0.3s ease;
}

.health-text {
  font-size: 20rpx;
  color: #666;
  min-width: 40rpx;
}

/* 加载遮罩 */
.loading-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.8);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f4f6;
  border-top: 4rpx solid #1989fa;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 16rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 24rpx;
  color: #666;
}

/* 主题颜色适配 */
.data-dashboard.admin .dashboard-title {
  color: #1989fa;
}

.data-dashboard.teacher .dashboard-title {
  color: #52c41a;
}

.data-dashboard.student .dashboard-title {
  color: #722ed1;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .data-dashboard {
    padding: 16rpx;
  }
  
  .stats-grid {
    grid-template-columns: 1fr;
  }
  
  .actions-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .dashboard-header {
    flex-direction: column;
    gap: 16rpx;
    align-items: stretch;
  }
  
  .header-actions {
    justify-content: center;
  }
  
  .status-bar {
    flex-direction: column;
    gap: 16rpx;
  }
  
  .status-item {
    border-right: none;
    border-bottom: 1rpx solid #f0f0f0;
    padding-bottom: 16rpx;
  }
  
  .status-item:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }
}