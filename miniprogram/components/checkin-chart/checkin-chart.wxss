/* GitHub风格14天打卡图组件样式 */
.checkin-chart {
  width: 100%;
  padding: 16rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

/* V1.0 智能分析头部 */
.analysis-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
  padding: 12rpx 0;
}

.streak-badge {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: linear-gradient(135deg, #ff6b6b, #ff8e53);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-weight: bold;
}

.streak-number {
  font-size: 28rpx;
  font-weight: bold;
}

.streak-label {
  font-size: 24rpx;
}

.motivational-msg {
  flex: 1;
  margin-left: 16rpx;
}

.msg-text {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

/* 周标签行 */
.week-labels {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
  padding: 0 4rpx;
}

.week-label {
  font-size: 24rpx;
  color: #666;
  width: 32rpx;
  text-align: center;
}

/* 打卡方格图 */
.checkin-grid {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  margin-bottom: 16rpx;
}

.grid-row {
  display: flex;
  justify-content: space-between;
  gap: 6rpx;
}

/* 单个方格样式 */
.grid-item {
  width: 32rpx;
  height: 32rpx;
  border-radius: 4rpx;
  border: 1rpx solid #eee;
  position: relative;
  transition: all 0.2s ease;
}

/* 打卡强度级别 - 更柔和的GitHub风格颜色 */
.grid-item.level-0 {
  background-color: #ebedf0;
  border-color: #d1d5da;
}

.grid-item.level-1 {
  background-color: #9be9a8;
  border-color: #7bc96f;
}

.grid-item.level-2 {
  background-color: #40c463;
  border-color: #30a14e;
}

.grid-item.level-3 {
  background-color: #30a14e;
  border-color: #216e39;
}

/* 今天的特殊标记 */
.grid-item.today {
  box-shadow: 0 0 0 2rpx #007aff;
}

/* 已打卡的额外效果 */
.grid-item.checked {
  transform: scale(1.1);
}

/* 点击效果 */
.grid-item:active {
  transform: scale(0.95);
}

/* 选中状态 */
.grid-item.selected {
  box-shadow: 0 0 0 3rpx #007aff;
  transform: scale(1.15);
}

/* V1.0 趋势分析区域 */
.trend-analysis {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 16rpx 0;
  padding: 12rpx 16rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
}

.trend-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  flex: 1;
}

.trend-icon {
  font-size: 32rpx;
}

.trend-text {
  font-size: 26rpx;
  color: #555;
}

.detail-btn {
  background: #007aff;
  color: white;
  border: none;
  padding: 6rpx 12rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
}

.detail-btn:active {
  background: #0056b3;
}

/* 图例说明 */
.legend {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding-top: 12rpx;
  border-top: 1rpx solid #f0f0f0;
}

.legend-text {
  font-size: 22rpx;
  color: #999;
}

.legend-item {
  width: 20rpx;
  height: 20rpx;
  border-radius: 3rpx;
  border: 1rpx solid #eee;
}

.legend-item.level-0 {
  background-color: #f0f0f0;
}

.legend-item.level-1 {
  background-color: #c6e48b;
}

.legend-item.level-2 {
  background-color: #7bc96f;
}

.legend-item.level-3 {
  background-color: #239a3b;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .grid-item {
    width: 28rpx;
    height: 28rpx;
  }
  
  .week-label {
    font-size: 22rpx;
    width: 28rpx;
  }
}

/* 微信小程序特有的触摸反馈 */
.grid-item {
  -webkit-tap-highlight-color: transparent;
}