/* 骨架屏组件样式 */
.skeleton-container {
  padding: 20rpx;
}

/* 骨架屏动画 */
.skeleton-animated {
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: loading 1.5s infinite;
}

@keyframes loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

/* 任务卡片骨架屏 */
.skeleton-task-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.05);
}

.skeleton-card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.skeleton-title {
  height: 40rpx;
  border-radius: 20rpx;
  flex: 1;
  margin-right: 20rpx;
}

.skeleton-status {
  width: 120rpx;
  height: 36rpx;
  border-radius: 18rpx;
}

.skeleton-card-meta {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.skeleton-meta-item {
  width: 140rpx;
  height: 28rpx;
  border-radius: 14rpx;
}

.skeleton-card-content {
  margin-bottom: 25rpx;
}

.skeleton-line {
  height: 28rpx;
  border-radius: 14rpx;
  margin-bottom: 12rpx;
}

.skeleton-line:last-child {
  margin-bottom: 0;
}

.skeleton-card-actions {
  display: flex;
  gap: 20rpx;
}

.skeleton-button {
  width: 120rpx;
  height: 56rpx;
  border-radius: 28rpx;
}

/* 学生列表骨架屏 */
.skeleton-student-card {
  background: white;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.skeleton-student-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.skeleton-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  margin-right: 25rpx;
}

.skeleton-student-details {
  flex: 1;
}

.skeleton-name {
  height: 32rpx;
  width: 180rpx;
  border-radius: 16rpx;
  margin-bottom: 12rpx;
}

.skeleton-meta {
  height: 24rpx;
  width: 120rpx;
  border-radius: 12rpx;
}

.skeleton-student-stats {
  display: flex;
  gap: 30rpx;
}

.skeleton-stat {
  width: 60rpx;
  height: 40rpx;
  border-radius: 20rpx;
}

/* 批改任务骨架屏 */
.skeleton-grading-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.05);
}

.skeleton-grading-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.skeleton-task-title {
  height: 36rpx;
  flex: 1;
  border-radius: 18rpx;
  margin-right: 20rpx;
}

.skeleton-task-count {
  width: 100rpx;
  height: 32rpx;
  border-radius: 16rpx;
}

.skeleton-progress {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.skeleton-progress-bar {
  flex: 1;
  height: 12rpx;
  border-radius: 6rpx;
}

.skeleton-progress-text {
  width: 80rpx;
  height: 24rpx;
  border-radius: 12rpx;
}

/* 统计数据骨架屏 */
.skeleton-stats-container {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: white;
  padding: 30rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

.skeleton-stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.skeleton-stat-number {
  width: 80rpx;
  height: 44rpx;
  border-radius: 22rpx;
  margin-bottom: 8rpx;
}

.skeleton-stat-label {
  width: 60rpx;
  height: 24rpx;
  border-radius: 12rpx;
}

/* 简单列表骨架屏 */
.skeleton-simple-item {
  background: white;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.skeleton-item-content {
  flex: 1;
}

.skeleton-arrow {
  width: 24rpx;
