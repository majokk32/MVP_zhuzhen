/* 任务详情骨架屏 */
.skeleton-task-detail {
  padding: 20rpx;
}

.skeleton-task-header {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.skeleton-task-title {
  height: 40rpx;
  width: 80%;
  border-radius: 20rpx;
  margin-bottom: 15rpx;
}

