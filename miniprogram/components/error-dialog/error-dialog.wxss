/* components/error-dialog/error-dialog.wxss */

.error-dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
  backdrop-filter: blur(4rpx);
}

.error-dialog-mask.show {
  opacity: 1;
  visibility: visible;
}

.error-dialog-container {
  width: 640rpx;
  max-width: 90vw;
  max-height: 85vh;
  background: white;
  border-radius: 24rpx;
  overflow: hidden;
  position: relative;
  transform: scale(0.8) translateY(50rpx);
  transition: transform 0.3s ease;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
}

.error-dialog-mask.show .error-dialog-container {
  transform: scale(1) translateY(0);
}

/* 错误头部 */
.error-header {
  padding: 48rpx 40rpx 24rpx;
  text-align: center;
  background: linear-gradient(135deg, #f8f9ff 0%, #f0f2ff 100%);
  border-bottom: 1rpx solid #e8eaed;
}

.error-icon {
  font-size: 100rpx;
  line-height: 1;
  margin-bottom: 20rpx;
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

.error-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.3;
}

/* 错误内容 */
.error-content {
  padding: 32rpx 40rpx;
}

.error-message {
  font-size: 28rpx;
  line-height: 1.6;
  color: #666;
  text-align: center;
  margin-bottom: 16rpx;
}

.error-code {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  font-family: 'Monaco', 'Menlo', monospace;
  background: #f5f5f5;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  display: inline-block;
  margin: 0 auto;
}

/* 建议列表 */
.suggestions-section {
  padding: 0 40rpx 32rpx;
}

.suggestions-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.suggestions-list {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx;
}

.suggestion-item {
  font-size: 24rpx;
  line-height: 1.6;
  color: #555;
  margin-bottom: 8rpx;
}

.suggestion-item:last-child {
  margin-bottom: 0;
}

/* 详细信息 */
.details-section {
  padding: 0 40rpx 32rpx;
  border-top: 1rpx solid #e8eaed;
  margin-top: 24rpx;
  padding-top: 24rpx;
}

.details-toggle {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 0;
  cursor: pointer;
  border-radius: 8rpx;
  transition: background 0.2s ease;
}

.details-toggle:active {
  background: #f5f5f5;
}

.details-text {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

.toggle-icon {
  font-size: 20rpx;
  color: #999;
  transition: transform 0.3s ease;
}

.toggle-icon.expanded {
  transform: rotate(180deg);
}

.details-content {
  margin-top: 16rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  border-left: 4rpx solid #1989fa;
}

.details-info {
  font-size: 22rpx;
  line-height: 1.6;
  color: #666;
  font-family: 'Monaco', 'Menlo', monospace;
  word-break: break-all;
  display: block;
}

.copy-button {
  margin-top: 16rpx;
  background: transparent;
  border: 1rpx solid #ddd;
  border-radius: 6rpx;
  padding: 8rpx 16rpx;
  font-size: 22rpx;
  color: #666;
}

.copy-button:active {
  background: #f0f0f0;
}

/* 操作按钮 */
.error-actions {
  padding: 24rpx 40rpx 40rpx;
  background: #fafafa;
}

.primary-actions {
  margin-bottom: 16rpx;
}

.secondary-actions {
  display: flex;
  gap: 16rpx;
}

.action-button {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  transition: all 0.2s ease;
}

.action-button.primary {
  background: linear-gradient(135deg, #1989fa 0%, #10239e 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(25, 137, 250, 0.3);
}

.action-button.primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(25, 137, 250, 0.3);
}

.action-button.secondary {
  background: white;
  color: #666;
  border: 1rpx solid #ddd;
}

.action-button.secondary:active {
  background: #f5f5f5;
  transform: translateY(1rpx);
}

/* 关闭按钮 */
.close-button {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 60rpx;
  height: 60rpx;
  background: rgba(0, 0, 0, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #666;
  font-size: 28rpx;
  font-weight: bold;
  transition: all 0.2s ease;
}

.close-button:active {
  background: rgba(0, 0, 0, 0.2);
  transform: scale(0.95);
}

/* 响应式适配 */
@media (max-width: 375px) {
  .error-dialog-container {
    width: 95vw;
    max-height: 80vh;
  }
  
  .error-header {
    padding: 40rpx 32rpx 20rpx;
  }
  
  .error-icon {
    font-size: 80rpx;
  }
  
  .error-title {
    font-size: 32rpx;
  }
  
  .error-content,
  .suggestions-section,
  .details-section {
    padding-left: 32rpx;
    padding-right: 32rpx;
  }
  
  .error-actions {
    padding: 20rpx 32rpx 32rpx;
  }
  
  .secondary-actions {
    flex-direction: column;
    gap: 12rpx;
  }
}

/* 暗色主题支持 */
@media (prefers-color-scheme: dark) {
  .error-dialog-container {
    background: #1a1a1a;
    color: #fff;
  }
  
  .error-header {
    background: linear-gradient(135deg, #2a2a2a 0%, #333 100%);
    border-bottom-color: #444;
  }
  
  .error-title {
    color: #fff;
  }
  
  .error-message {
    color: #ccc;
  }
  
  .error-code {
    background: #333;
    color: #ccc;
  }
  
  .suggestions-list,
  .details-content {
    background: #2a2a2a;
  }
  
  .suggestion-item {
    color: #bbb;
  }
  
  .details-info {
    color: #bbb;
  }
  
  .error-actions {
    background: #2a2a2a;
  }
  
  .action-button.secondary {
    background: #333;
    color: #ccc;
    border-color: #555;
  }
  
  .close-button {
    background: rgba(255, 255, 255, 0.1);
    color: #ccc;
  }
}